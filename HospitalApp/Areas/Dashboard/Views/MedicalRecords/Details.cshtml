@model HospitalApp.Models.MedicalRecord
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}
<h2>Chi tiết hồ sơ khám</h2>
<dl class="row">
    <dt class="col-sm-3">Thời gian</dt>
    <dd class="col-sm-9">@Model.Time</dd>
    <dt class="col-sm-3">Bệnh nhân</dt>
    <dd class="col-sm-9">@Model.Patient?.FullName (@Model.PatientId)</dd>
    <dt class="col-sm-3">Bác sĩ</dt>
    <dd class="col-sm-9">@Model.Doctor?.FullName (@Model.DoctorId)</dd>
    <dt class="col-sm-3">Thanh toán</dt>
    <dd class="col-sm-9">@Model.PaymentStatus</dd>
    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
<a class="btn btn-secondary" asp-action="Index">Về danh sách</a>
