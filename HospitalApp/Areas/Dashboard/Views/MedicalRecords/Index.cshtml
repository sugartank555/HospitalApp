@model IEnumerable<HospitalApp.Models.MedicalRecord>
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Hồ sơ khám";
}
<h2>@ViewData["Title"]</h2>
<p><a class="btn btn-primary" asp-action="Create">+ Thêm</a></p>
<table class="table table-striped">
    <thead>
        <tr><th>ID</th><th>Thời gian</th><th>Bệnh nhân</th><th>Bác sĩ</th><th>TT Thanh toán</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Time</td>
                <td>@x.Patient?.FullName</td>
                <td>@x.Doctor?.FullName</td>
                <td>@x.PaymentStatus</td>
                <td>
                    <a asp-action="Details" asp-route-id="@x.Id">Xem</a> |
                    <a asp-action="Edit" asp-route-id="@x.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@x.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
