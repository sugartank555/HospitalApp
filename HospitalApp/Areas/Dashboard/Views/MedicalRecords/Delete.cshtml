@model HospitalApp.Models.MedicalRecord
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xóa hồ sơ khám";
}

<div class="card shadow-sm border-0">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold text-danger m-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Xác nhận xóa hồ sơ khám
        </h3>
        <p class="text-muted mt-1">Hành động này không thể hoàn tác.</p>
    </div>

    <!-- Body -->
    <div class="card-body px-4 pb-4">

        <p class="fs-5">
            Bạn có chắc chắn muốn xóa hồ sơ khám
            <strong class="text-dark">#@Model.Id</strong>?
        </p>

        <ul class="list-unstyled ms-2 mt-3">
            <li class="mb-2">
                <i class="fas fa-clock text-secondary me-2"></i>
                <strong>Thời gian:</strong> @Model.Time
            </li>

            <li class="mb-2">
                <i class="fas fa-user-injured text-secondary me-2"></i>
                <strong>Bệnh nhân:</strong>
                @Model.Patient?.FullName (@Model.PatientId)
            </li>

            <li class="mb-2">
                <i class="fas fa-user-md text-secondary me-2"></i>
                <strong>Bác sĩ:</strong>
                @Model.Doctor?.FullName (@Model.DoctorId)
            </li>

            <li class="mb-2">
                <i class="fas fa-wallet text-secondary me-2"></i>
                <strong>Thanh toán:</strong> @Model.PaymentStatus
            </li>

            <li class="mb-2">
                <i class="fas fa-clipboard-check text-secondary me-2"></i>
                <strong>Trạng thái hồ sơ:</strong> @Model.Status
            </li>
        </ul>

        <p class="text-danger fw-semibold mt-3">Dữ liệu sẽ bị xóa vĩnh viễn khỏi hệ thống.</p>
    </div>

    <!-- Footer -->
    <div class="card-footer bg-white border-0 px-4 pb-4 pt-2 d-flex justify-content-between">

        <a asp-action="Index" class="btn btn-light border">
            <i class="fas fa-times me-1"></i> Hủy
        </a>

        <form method="post" asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button class="btn btn-danger px-4">
                <i class="fas fa-trash-alt me-1"></i> Xóa hồ sơ
            </button>
        </form>

    </div>
</div>
