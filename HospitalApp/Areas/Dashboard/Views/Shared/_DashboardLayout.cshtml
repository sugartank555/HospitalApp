@using Microsoft.AspNetCore.Mvc
@{
    var ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    Func<string, string> active = c => string.Equals(ctrl, c, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    var title = ViewData["Title"]?.ToString() ?? "Dashboard";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@title - Hospital Admin</title>

    <!-- Fonts & CSS -->
    <link href="~/Dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link href="~/Dashboard/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true" />
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center"
               asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-hospital"></i>
                </div>
                <div class="sidebar-brand-text mx-2">
                    <span class="font-weight-bold">Quản lý Bệnh viện</span>
                    <sup class="badge badge-light ml-1">Admin</sup>
                </div>
            </a>

            <hr class="sidebar-divider my-0" />

            <!-- Tổng quan -->
            <li class="nav-item @active("Home")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Tổng quan</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <!-- Quản lý khám -->
            <div class="sidebar-heading">Quản lý khám</div>

            <li class="nav-item @active("AppointmentSchedules")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="AppointmentSchedules" asp-action="Index">
                    <i class="fas fa-fw fa-calendar-check"></i>
                    <span>Lịch khám</span>
                </a>
            </li>

            <li class="nav-item @active("MedicalRecords")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="MedicalRecords" asp-action="Index">
                    <i class="fas fa-fw fa-file-medical"></i>
                    <span>Hồ sơ khám</span>
                </a>
            </li>

            <li class="nav-item @active("MedicalTests")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="MedicalTests" asp-action="Index">
                    <i class="fas fa-fw fa-vials"></i>
                    <span>Xét nghiệm</span>
                </a>
            </li>

            <li class="nav-item @active("Prescriptions")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Prescriptions" asp-action="Index">
                    <i class="fas fa-fw fa-prescription-bottle-alt"></i>
                    <span>Toa thuốc</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <!-- Nhân sự & Bệnh nhân -->
            <div class="sidebar-heading">Nhân sự & Bệnh nhân</div>

            <li class="nav-item @active("Doctors")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Doctors" asp-action="Index">
                    <i class="fas fa-fw fa-user-md"></i>
                    <span>Bác sĩ</span>
                </a>
            </li>

            <li class="nav-item @active("Patients")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Patients" asp-action="Index">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Bệnh nhân</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <!-- Danh mục nền -->
            <div class="sidebar-heading">Danh mục nền</div>

            <li class="nav-item @active("MedicalDepartments")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="MedicalDepartments" asp-action="Index">
                    <i class="fas fa-fw fa-hospital"></i>
                    <span>Khoa/Phòng ban</span>
                </a>
            </li>

            <li class="nav-item @active("Services")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Services" asp-action="Index">
                    <i class="fas fa-fw fa-stethoscope"></i>
                    <span>Dịch vụ</span>
                </a>
            </li>

            <li class="nav-item @active("Positions")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Positions" asp-action="Index">
                    <i class="fas fa-fw fa-id-badge"></i>
                    <span>Chức danh</span>
                </a>
            </li>

            <li class="nav-item @active("Expertises")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Expertises" asp-action="Index">
                    <i class="fas fa-fw fa-book-medical"></i>
                    <span>Chuyên môn</span>
                </a>
            </li>

            <li class="nav-item @active("Medicines")">
                <a class="nav-link" asp-area="Dashboard" asp-controller="Medicines" asp-action="Index">
                    <i class="fas fa-fw fa-pills"></i>
                    <span>Thuốc</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block" />

            <!-- Toggle -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Search (optional) -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Right -->
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- User -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User?.Identity?.Name</span>
                                <img class="img-profile rounded-circle" src="~/Dashboard/undraw_profile.svg" />
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home fa-sm fa-fw mr-2 text-gray-400"></i> Về trang người dùng
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-area="Identity" asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="dropdown-item p-0">
                                    <button class="btn btn-link dropdown-item">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i> Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End Topbar -->

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <!-- End Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>© @DateTime.Now.Year Hospital Admin</span>
                    </div>
                </div>
            </footer>
            <!-- End Footer -->
        </div>
        <!-- End Content Wrapper -->
    </div>
    <!-- End Page Wrapper -->
    <!-- Scroll to Top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- JS -->
    <script src="~/Dashboard/vendor/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/Dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/Dashboard/vendor/jquery-easing/jquery.easing.min.js" asp-append-version="true"></script>
    <script src="~/Dashboard/js/sb-admin-2.min.js" asp-append-version="true"></script>

    <!-- Optional: charts -->
    <script src="~/Dashboard/vendor/chart.js/Chart.min.js" asp-append-version="true"></script>
    <script src="~/Dashboard/js/demo/chart-area-demo.js" asp-append-version="true"></script>
    <script src="~/Dashboard/js/demo/chart-pie-demo.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
