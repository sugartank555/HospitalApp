
@model HospitalApp.ViewModels.PrescriptionIndexViewModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Toa thuốc";

    var search = ViewData["Search"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

<div class="card shadow-sm border-0">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold m-0">
            <i class="fas fa-prescription-bottle-alt text-primary me-2"></i>
            @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1">Quản lý danh sách toa thuốc của hồ sơ khám</p>
    </div>

    <div class="card-body px-4">

        <!-- Action row -->
        <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus me-1"></i> Thêm toa
            </a>

            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input name="search" value="@search" class="form-control"
                       placeholder="Tìm ngày, ID toa, MedicalRecordId..." />

                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-undo"></i>
                </a>
            </form>
        </div>

        <!-- No data -->
        @if (Model.Items == null || !Model.Items.Any())

        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-1"></i> Chưa có toa thuốc nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">

                    <thead class="bg-light fw-semibold">
                        <tr>

                            <!-- ID -->
                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-route-sortOrder="@ViewData["IdSort"]"
                                   asp-route-search="@search">

                                    ID
                                    @if (currentSort == "id")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (currentSort == "id_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <!-- RECORD -->
                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-route-sortOrder="@ViewData["MrSort"]"
                                   asp-route-search="@search">
                                    Hồ sơ
                                    @if (currentSort == "mr")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (currentSort == "mr_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <!-- DATE -->
                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-route-sortOrder="@ViewData["DateSort"]"
                                   asp-route-search="@search">

                                    Ngày lập
                                    @if (currentSort == "date_desc")
                                    {
                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                    else if (string.IsNullOrEmpty(currentSort))
                                    {

                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th class="text-end" style="width:300px">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var x in Model.Items)
                        {
                            <tr>
                                <td>@x.Id</td>
                                <td>
                                    <span class="fw-semibold">
                                        #@x.MedicalRecordId – @x.PatientName
                                    </span>
                                </td>

                                <td>@x.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>

                                <td class="text-end">

                                    <a class="btn btn-sm btn-outline-success me-1"
                                       asp-action="Items" asp-route-id="@x.Id">
                                        <i class="fas fa-pills"></i> Thêm thuốc
                                    </a>

                                    <a class="btn btn-sm btn-outline-info me-1"
                                       asp-action="Details" asp-route-id="@x.Id">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a class="btn btn-sm btn-outline-primary me-1"
                                       asp-action="Edit" asp-route-id="@x.Id">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a class="btn btn-sm btn-outline-danger"
                                       asp-action="Delete" asp-route-id="@x.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(Model.PagingInfo.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(Model.PagingInfo.PageIndex - 1)"
                               asp-route-search="@Model.Search"
                               asp-route-sortOrder="@Model.SortOrder">«</a>
                        </li>

                        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PagingInfo.PageIndex == i ? "active" : "")">
                                <a class="page-link"
                                   asp-route-page="@i"
                                   asp-route-search="@Model.Search"
                                   asp-route-sortOrder="@Model.SortOrder">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.PagingInfo.PageIndex == Model.PagingInfo.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(Model.PagingInfo.PageIndex + 1)"
                               asp-route-search="@Model.Search"
                               asp-route-sortOrder="@Model.SortOrder">»</a>
                        </li>

                    </ul>
                </nav>

            </div>
        }

    </div>

</div>
