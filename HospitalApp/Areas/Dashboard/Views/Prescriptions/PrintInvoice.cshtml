@model HospitalApp.Models.Prescription
@{
    Layout = null;
    var items = (IEnumerable<HospitalApp.Models.MedicineOfPrescription>)ViewBag.Items;
    Func<decimal, string> fmt = v => v.ToString("N0") + " VNĐ";
    var patient = Model.MedicalRecord?.Patient;
    var doctor = Model.MedicalRecord?.Doctor;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn toa thuốc #@Model.Id</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-size: 16px;
        }

        .invoice-box {
            padding: 40px;
        }
        @@media print {
            .no-print

        {
            display: none !important;
        }

        }
    </style>
</head>

<body>

    <div class="invoice-box border rounded shadow p-4">

        <div class="no-print mb-3">
            <a href="javascript:window.print()" class="btn btn-primary">
                <i class="fas fa-print me-1"></i> In hóa đơn
            </a>
        </div>

        <h3 class="text-center fw-bold mb-4">HÓA ĐƠN TOA THUỐC</h3>

        <!-- INFO -->
        <div class="row mb-4">
            <div class="col-sm-6">
                <p class="mb-1"><b>Mã toa thuốc:</b> @Model.Id</p>
                <p class="mb-1"><b>Ngày lập:</b> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                <p class="mb-1"><b>Mã hồ sơ:</b> @Model.MedicalRecordId</p>
            </div>

            <div class="col-sm-6">
                <p class="mb-1"><b>Bệnh nhân:</b> @patient?.FullName</p>
              
                <p class="mb-1"><b>Bác sĩ kê toa:</b> @doctor?.FullName</p>
            </div>
        </div>

        <!-- TABLE -->
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Tên thuốc</th>
                    <th>Đơn vị</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int i = 1;
                    decimal total = 0m;
                    foreach (var it in items)
                    {
                        var price = it.Medicine?.Price ?? 0;
                        var qty = it.Quantity;
                        var sub = qty * price;
                        total += sub;
                        <tr>
                            <td>@i</td>
                            <td>@it.Medicine?.Name</td>
                            <td>@it.Medicine?.Unit</td>
                            <td>@fmt(price)</td>
                            <td>@qty</td>
                            <td>@fmt(sub)</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>

            <tfoot>
                <tr class="table-light">
                    <th colspan="5" class="text-end">TỔNG CỘNG:</th>
                    <th class="fw-bold text-danger">@fmt(total)</th>
                </tr>
            </tfoot>
        </table>

        <p class="mt-4 fst-italic">(*) Hóa đơn được tạo tự động bởi hệ thống.</p>

    </div>

</body>
</html>
