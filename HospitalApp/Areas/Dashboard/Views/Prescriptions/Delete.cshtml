@model HospitalApp.Models.Prescription
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xoá toa thuốc";
}
<div class="card shadow-sm border-0 mt-2">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold text-danger m-0">
            <i class="fas fa-trash-alt me-2"></i>
            Xoá toa thuốc
        </h3>
        <p class="text-muted mt-1">Hành động này không thể hoàn tác.</p>
    </div>

    <!-- Body -->
    <div class="card-body px-4 pb-4">
        <div class="alert alert-warning d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-lg me-3"></i>
            <div>
                Bạn có chắc chắn muốn xoá toa thuốc
                <strong>#@Model.Id</strong>?
                <br />
                Thao tác này sẽ loại bỏ hoàn toàn toa thuốc khỏi hệ thống.
            </div>
        </div>

        <form method="post" asp-action="Delete" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">

                <a class="btn btn-secondary"
                   asp-action="Index">
                    <i class="fas fa-arrow-left me-1"></i> Hủy
                </a>

                <button class="btn btn-danger px-4"
                        onclick="return confirm('Bạn chắc chắn muốn xoá toa thuốc này?');">
                    <i class="fas fa-trash-alt me-1"></i> Xoá
                </button>

            </div>
        </form>
    </div>

</div>
