@model HospitalApp.Models.Prescription
@{
    Layout = null;

    var items = (IEnumerable<HospitalApp.Models.MedicineOfPrescription>)ViewBag.Items;
    Func<decimal, string> fmt = v => v.ToString("N0") + " VNĐ";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách thuốc - Toa #@Model.Id</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-size: 15px;
        }

        .invoice-box {
            padding: 20px;
        }

        @@media print {
            .no-print {
                display: none !important;
            }
        }
    </style>
</head>

<body>

    <div class="invoice-box border rounded shadow p-4">

        <!-- Nút In -->
        <div class="no-print mb-3">
            <a href="javascript:window.print()" class="btn btn-primary">
                <i class="fas fa-print me-1"></i> In danh sách thuốc
            </a>
        </div>

        <h4 class="fw-bold text-center mb-4">DANH SÁCH THUỐC TRONG TOA</h4>

        <p class="mb-1"><b>Mã toa:</b> @Model.Id</p>
        <p class="mb-1"><b>Ngày tạo:</b> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>

        <hr />

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Tên thuốc</th>
                    <th>Đơn vị</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int idx = 1;
                    decimal total = 0m;

                    foreach (var it in items)
                    {
                        var price = it.Medicine?.Price ?? 0;
                        var sub = price * it.Quantity;
                        total += sub;
                        <tr>
                            <td>@idx</td>
                            <td>@it.Medicine?.Name</td>
                            <td>@it.Medicine?.Unit</td>
                            <td>@fmt(price)</td>
                            <td>@it.Quantity</td>
                            <td>@fmt(sub)</td>
                        </tr>
                        idx++;
                    }
                }
            </tbody>

            <tfoot>
                <tr class="table-light">
                    <th colspan="5" class="text-end">TỔNG CỘNG</th>
                    <th class="fw-bold">@fmt(total)</th>
                </tr>
            </tfoot>
        </table>

        <p class="mt-3 fst-italic">(*) File in danh sách thuốc.</p>

    </div>

</body>
</html>
