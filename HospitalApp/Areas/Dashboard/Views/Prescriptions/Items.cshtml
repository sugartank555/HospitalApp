@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    var pres = (HospitalApp.Models.Prescription)ViewBag.Prescription;
    var items = (IEnumerable<HospitalApp.Models.MedicineOfPrescription>)ViewBag.Items;
    ViewData["Title"] = $"Thuốc của toa #{pres.Id}";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a class="btn btn-secondary" asp-action="Index">← Danh sách toa</a>
    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@pres.Id">Xem chi tiết toa</a>
</div>

<div class="card mb-4">
    <div class="card-header">Thêm thuốc</div>
    <div class="card-body">
        <form method="post" asp-action="AddItem">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@pres.Id" />
            <div class="row g-2">
                <div class="col-md-6">
                    <label class="form-label">Thuốc</label>
                    <select name="medicineId" class="form-select" asp-items="ViewBag.MedicineId"></select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Số lượng</label>
                    <input name="quantity" type="number" class="form-control" value="1" min="1" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100">Thêm</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Danh sách thuốc</div>
    <div class="card-body p-0">
        <table class="table mb-0">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Tên thuốc</th>
                    <th>Đơn giá</th>
                    <th style="width:140px;">Số lượng</th>
                    <th>Tạm tính</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal total = 0m;
                    int idx = 1;
                    foreach (var it in items)
                    {
                        var price = it.Medicine?.Price ?? 0m;
                        var qty = it.Quantity; // yêu cầu có Quantity
                        var sub = price * qty;
                        total += sub;
                        <tr>
                            <td>@idx</td>
                            <td>@it.Medicine?.Name</td>
                            <td>@price</td>
                            <td>
                                <form method="post" asp-action="UpdateItem" class="d-flex">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@pres.Id" />
                                    <input type="hidden" name="medicineId" value="@it.MedicineId" />
                                    <input name="quantity" type="number" class="form-control form-control-sm me-2" value="@qty" min="1" />
                                    <button class="btn btn-sm btn-outline-primary">Cập nhật</button>
                                </form>
                            </td>
                            <td>@sub</td>
                            <td>
                                <form method="post" asp-action="RemoveItem" onsubmit="return confirm('Xoá thuốc này?');" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@pres.Id" />
                                    <input type="hidden" name="medicineId" value="@it.MedicineId" />
                                    <button class="btn btn-sm btn-outline-danger">Xoá</button>
                                </form>
                            </td>
                        </tr>
                        idx++;
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4" class="text-end">Tổng cộng</th>
                    <th colspan="2">@total</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
