@model HospitalApp.Models.Doctor
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}
<h2>Chi tiết bác sĩ</h2>
<dl class="row">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">SĐT</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
    <dt class="col-sm-2">Chức danh</dt>
    <dd class="col-sm-10">@Model.Position?.Name</dd>
    <dt class="col-sm-2">Chuyên môn</dt>
    <dd class="col-sm-10">@Model.Expertise?.Name</dd>
</dl>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
<a class="btn btn-secondary" asp-action="Index">Về danh sách</a>
