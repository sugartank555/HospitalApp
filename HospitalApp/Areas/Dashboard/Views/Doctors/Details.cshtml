@model HospitalApp.Models.Doctor
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết bác sĩ";
}
<h2>@ViewData["Title"]</h2>
<dl class="row">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Điện thoại</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
    <dt class="col-sm-2">Chức danh</dt>
    <dd class="col-sm-10">@Model.Position?.Name</dd>
    <dt class="col-sm-2">Chuyên môn</dt>
    <dd class="col-sm-10">@Model.Expertise?.Name</dd>
</dl>
<a class="btn btn-secondary" asp-area="Dashboard" asp-controller="Doctors" asp-action="Index">Quay lại</a>
<a class="btn btn-warning" asp-area="Dashboard" asp-controller="Doctors" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
<a class="btn btn-danger" asp-area="Dashboard" asp-controller="Doctors" asp-action="Delete" asp-route-id="@Model.Id">Xoá</a>
