@model HospitalApp.Models.Doctor
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa bác sĩ";
}
<div class="card shadow-sm border-0 mt-2">

    <!-- Header -->
    <div class="card-header bg-white pt-4 pb-3 px-4 border-0">
        <h3 class="fw-bold m-0">
            <i class="fas fa-user-md text-primary me-2"></i>
            @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1 mb-0">Chỉnh sửa thông tin một bác sĩ trong hệ thống</p>
    </div>

    <!-- Body -->
    <div class="card-body px-4 pb-4">

        <form asp-area="Dashboard" asp-controller="Doctors" asp-action="Edit" method="post">

            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="StaffType" />

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Full Name -->
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold">
                    <i class="fas fa-user me-1 text-secondary"></i> Họ tên
                </label>
                <input asp-for="FullName" class="form-control form-control-lg" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-semibold">
                    <i class="fas fa-phone me-1 text-secondary"></i> Điện thoại
                </label>
                <input asp-for="PhoneNumber" class="form-control form-control-lg" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Position -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-briefcase-medical me-1 text-secondary"></i> Chức danh
                </label>
                <select asp-for="PositionId" class="form-select form-select-lg" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>

            <!-- Expertise -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-stethoscope me-1 text-secondary"></i> Chuyên môn
                </label>
                <select asp-for="ExpertiseId" class="form-select form-select-lg" asp-items="ViewBag.ExpertiseId"></select>
                <span asp-validation-for="ExpertiseId" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-area="Dashboard"
                   asp-controller="Doctors"
                   asp-action="Index"
                   class="btn btn-light border px-3">
                    <i class="fas fa-arrow-left me-1"></i> Hủy
                </a>

                <button class="btn btn-primary px-4">
                    <i class="fas fa-save me-1"></i> Lưu thay đổi
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
