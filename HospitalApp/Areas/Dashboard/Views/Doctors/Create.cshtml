@model HospitalApp.Models.Doctor
@{
    ViewData["Title"] = "Thêm bác sĩ";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card shadow-sm border-0 mt-2">

    <!-- Header -->
    <div class="card-header bg-white pt-4 pb-3 px-4 border-0">
        <h3 class="fw-bold m-0">
            <i class="fas fa-user-md text-primary me-2"></i>
            @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1 mb-0">Tạo tài khoản bác sĩ mới trong hệ thống</p>
    </div>

    <!-- Body -->
    <div class="card-body px-4 pb-4">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-area="Dashboard" asp-controller="Doctors" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Full name -->
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold">
                    <i class="fas fa-user me-1 text-secondary"></i> Họ tên
                </label>
                <input asp-for="FullName" class="form-control form-control-lg" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Phone number -->
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-semibold">
                    <i class="fas fa-phone me-1 text-secondary"></i> Số điện thoại
                </label>
                <input asp-for="PhoneNumber" class="form-control form-control-lg" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                <div class="alert alert-info mt-2 py-2 px-3 small">
                    <i class="fas fa-info-circle me-2"></i>
                    SĐT sẽ được dùng làm <strong>UserName</strong> và email mặc định là:
                    <strong>[sđt]hospital.local</strong>
                </div>
            </div>

            <!-- Position -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-briefcase-medical me-1 text-secondary"></i> Chức danh
                </label>
                <select asp-for="PositionId" class="form-select form-select-lg" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>

            <!-- Expertise -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-stethoscope me-1 text-secondary"></i> Chuyên môn
                </label>
                <select asp-for="ExpertiseId" class="form-select form-select-lg" asp-items="ViewBag.ExpertiseId"></select>
                <span asp-validation-for="ExpertiseId" class="text-danger"></span>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-light border"
                   asp-area="Dashboard" asp-controller="Doctors" asp-action="Index">
                    <i class="fas fa-arrow-left me-1"></i> Hủy
                </a>

                <button class="btn btn-primary px-4">
                    <i class="fas fa-save me-1"></i> Lưu
                </button>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
