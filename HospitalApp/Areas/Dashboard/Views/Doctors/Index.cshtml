@model IEnumerable<HospitalApp.Models.Doctor>
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml"; ViewData["Title"] = "Bác sĩ";
}
<h2>@ViewData["Title"]</h2>
<p><a class="btn btn-primary" asp-action="Create">+ Thêm</a></p>
<table class="table">
    <thead><tr><th>ID</th><th>Họ tên</th><th>Điện thoại</th><th>Chức danh</th><th>Chuyên môn</th><th></th></tr></thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.FullName</td>
                <td>@x.PhoneNumber</td>
                <td>@x.Position?.Name</td>
                <td>@x.Expertise?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@x.Id">Xem</a> |
                    <a asp-action="Edit" asp-route-id="@x.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@x.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
