
@model HospitalApp.ViewModels.DoctorIndexViewModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Bác sĩ";
    var search = ViewData["Search"] as string;
}

<div class="card shadow-sm border-0 mt-2">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4 pb-3">
        <h3 class="fw-bold m-0">
            <i class="fas fa-user-md text-primary me-2"></i>
            Danh sách bác sĩ
        </h3>
        <p class="text-muted mt-1">Quản lý thông tin bác sĩ trong hệ thống</p>
    </div>

    <!-- Alerts -->
    <div class="px-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-2">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-2">@TempData["Error"]</div>
        }
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-between align-items-center px-4 pb-3 pt-2 flex-wrap gap-2">

        <a class="btn btn-primary"
           asp-area="Dashboard" asp-controller="Doctors" asp-action="Create">
            <i class="fas fa-user-plus me-1"></i> Thêm bác sĩ
        </a>

        <form asp-action="Index" method="get" class="d-flex flex-grow-1 justify-content-end" style="max-width: 480px;">
            <div class="input-group">
                <input type="text" name="search" value="@search"
                       class="form-control"
                       placeholder="Tìm theo tên, SĐT, chức danh, chuyên môn..." />

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Tìm
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </form>

    </div>

    <!-- Body -->
    <div class="card-body px-4">

        @if (Model.Items == null || !Model.Items.Any())

        {
            <div class="alert alert-info">Chưa có bác sĩ nào.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:70px;">ID</th>
                            <th>Họ tên</th>
                            <th>Điện thoại</th>
                            <th>Chức danh</th>
                            <th>Chuyên môn</th>
                            <th style="width:240px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Items)
                        {
                            <tr>
                                <td>@x.Id</td>

                                <td class="fw-semibold">
                                    <i class="fas fa-user-md text-primary me-1"></i>
                                    @x.FullName
                                </td>

                                <td>@x.PhoneNumber</td>

                                <td>
                                    @if (x.Position != null)
                                    {
                                        <span class="badge bg-info text-dark">@x.Position.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td>
                                    @if (x.Expertise != null)
                                    {
                                        <span class="badge bg-success">@x.Expertise.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td class="text-nowrap">
                                    <a class="btn btn-sm btn-outline-info"
                                       asp-area="Dashboard" asp-controller="Doctors" asp-action="Details" asp-route-id="@x.Id">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>

                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-area="Dashboard" asp-controller="Doctors" asp-action="Edit" asp-route-id="@x.Id">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>

                                    <a class="btn btn-sm btn-outline-danger"
                                       asp-area="Dashboard" asp-controller="Doctors" asp-action="Delete" asp-route-id="@x.Id">
                                        <i class="fas fa-trash-alt"></i> Xoá
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- Pagination -->
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(Model.PagingInfo.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(Model.PagingInfo.PageIndex - 1)"
                               asp-route-search="@Model.Search">«</a>
                        </li>

                        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PagingInfo.PageIndex == i ? "active" : "")">
                                <a class="page-link"
                                   asp-route-page="@i"
                                   asp-route-search="@Model.Search">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.PagingInfo.PageIndex == Model.PagingInfo.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(Model.PagingInfo.PageIndex + 1)"
                               asp-route-search="@Model.Search">»</a>
                        </li>

                    </ul>
                </nav>

            </div>
        }

    </div>
</div>
