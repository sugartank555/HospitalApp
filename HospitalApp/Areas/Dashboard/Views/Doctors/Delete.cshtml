@model HospitalApp.Models.Doctor
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xoá bác sĩ";
}
<h2>@ViewData["Title"]</h2>
<div class="alert alert-warning">Bạn có chắc muốn xoá bác sĩ này?</div>
<dl class="row">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Điện thoại</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
    <dt class="col-sm-2">Chức danh</dt>
    <dd class="col-sm-10">@Model.Position?.Name</dd>
    <dt class="col-sm-2">Chuyên môn</dt>
    <dd class="col-sm-10">@Model.Expertise?.Name</dd>
</dl>
<form asp-area="Dashboard" asp-controller="Doctors" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button class="btn btn-danger">Xoá</button>
    <a class="btn btn-secondary" asp-area="Dashboard" asp-controller="Doctors" asp-action="Index">Hủy</a>
</form>
