@model HospitalApp.Models.Patient
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa bệnh nhân";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ethnic" class="form-label"></label>
        <input asp-for="Ethnic" class="form-control" />
        <span asp-validation-for="Ethnic" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Tài khoản (không bắt buộc)</label>
        <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
            <option value="">— Không liên kết —</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
