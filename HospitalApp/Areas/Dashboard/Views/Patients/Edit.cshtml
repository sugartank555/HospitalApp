@model HospitalApp.Models.Patient

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa thông tin bệnh nhân";
}

<div class="container-fluid py-4">

    <div class="card shadow-sm border-0">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-user-edit me-2"></i>
                @ViewData["Title"]
            </h4>
        </div>

        <div class="card-body px-4 py-4">

            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Summary -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Họ tên -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên bệnh nhân" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Ngày sinh -->
                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <!-- Dân tộc -->
                <div class="mb-3">
                    <label asp-for="Ethnic" class="form-label fw-semibold"></label>
                    <input asp-for="Ethnic" class="form-control" placeholder="VD: Kinh, Tày, Mường..." />
                    <span asp-validation-for="Ethnic" class="text-danger"></span>
                </div>

                <!-- Tài khoản liên kết -->
                <div class="mb-3">
                    <label asp-for="UserId" class="form-label fw-semibold">Tài khoản (không bắt buộc)</label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                        <option value="">— Không liên kết —</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <hr />

                <!-- Buttons -->
                <div class="text-end">
                    <button class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a class="btn btn-secondary px-3" asp-action="Index">
                        Quay lại
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
