@model HospitalApp.Models.Patient
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";

    string displayName = string.IsNullOrWhiteSpace(Model.FullName)
        ? (Model.User?.UserName ?? Model.User?.Email ?? "(Chưa có)")
        : Model.FullName!;
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-user-times me-2"></i>
                Xoá bệnh nhân
            </h4>
        </div>

        <div class="card-body px-4 py-4">

            <div class="alert alert-warning d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <div>
                    Bạn có chắc chắn muốn xoá bệnh nhân <strong>@displayName</strong> (ID: <b>@Model.Id</b>)?
                    <br />
                    <small class="text-muted">Hành động này không thể hoàn tác.</small>
                </div>
            </div>

            <!-- Patient info summary -->
            <dl class="row mb-4">
                <dt class="col-sm-3 col-md-2 fw-semibold">Họ tên</dt>
                <dd class="col-sm-9 col-md-10">@displayName</dd>

                <dt class="col-sm-3 col-md-2 fw-semibold">Ngày sinh</dt>
                <dd class="col-sm-9 col-md-10">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 col-md-2 fw-semibold">Dân tộc</dt>
                <dd class="col-sm-9 col-md-10">@(!string.IsNullOrWhiteSpace(Model.Ethnic) ? Model.Ethnic : "-")</dd>

                <dt class="col-sm-3 col-md-2 fw-semibold">Tài khoản</dt>
                <dd class="col-sm-9 col-md-10">
                    @if (!string.IsNullOrEmpty(Model.UserId))
                    {
                        <span class="badge bg-success me-2">Đã liên kết</span>
                        @(Model.User?.UserName ?? Model.User?.Email ?? "-")
                    }
                    else
                    {
                        <span class="badge bg-secondary">Khách</span>
                    }
                </dd>
            </dl>

            <!-- Buttons -->
            <form method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex gap-2">
                    <button class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-1"></i> Xoá
                    </button>

                    <a class="btn btn-secondary px-4" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>

</div>
