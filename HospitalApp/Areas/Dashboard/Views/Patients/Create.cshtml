@model HospitalApp.Models.Patient
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thêm bệnh nhân";
}
<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-user-plus me-2"></i>
                Thêm bệnh nhân
            </h4>
        </div>

        <div class="card-body px-4 py-4">

            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- FullName -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên bệnh nhân..." />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- DateOfBirth -->
                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <!-- Ethnic -->
                <div class="mb-3">
                    <label asp-for="Ethnic" class="form-label fw-semibold"></label>
                    <input asp-for="Ethnic" class="form-control" placeholder="Ví dụ: Kinh, Tày, Thái..." />
                    <span asp-validation-for="Ethnic" class="text-danger"></span>
                </div>

                <!-- User Linked -->
                <div class="mb-3">
                    <label asp-for="UserId" class="form-label fw-semibold">Tài khoản (không bắt buộc)</label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                        <option value="">— Không liên kết tài khoản —</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>

                    <div class="form-text mt-1 text-muted">
                        Nếu chọn tài khoản: bệnh nhân sẽ đăng nhập bằng tài khoản này để xem lịch hẹn & hồ sơ khám.
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2 mt-4">
                    <button class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a class="btn btn-secondary px-4" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
