@model HospitalApp.ViewModels.PatientIndexViewModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Bệnh nhân";
    var search = ViewData["Search"] as string;
}

<div class="card shadow-sm border-0 mt-2">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 pb-3 px-4">
        <h3 class="fw-bold m-0">
            <i class="fas fa-users text-primary me-2"></i>
            Danh sách bệnh nhân
        </h3>
        <p class="text-muted mt-1 mb-0">Quản lý thông tin bệnh nhân trong hệ thống</p>
    </div>

    <!-- Alerts -->
    <div class="px-4 pt-2">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-success">@TempData["Msg"]</div>
        }
    </div>

    <!-- Actions + Search -->
    <div class="px-4 pb-3 pt-1 d-flex justify-content-between align-items-center flex-wrap gap-2">

        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-user-plus me-1"></i> Thêm bệnh nhân
        </a>

        <form asp-action="Index" method="get" class="d-flex" style="max-width: 480px;">
            <div class="input-group">
                <input type="text" name="search" value="@search" class="form-control"
                       placeholder="Nhập tên / SĐT / Email bệnh nhân..." />

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Tìm
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </form>

    </div>
    <!-- Table -->
    <div class="card-body px-4">

        @if (!(Model.Items?.Any() ?? false))
        {
            <div class="alert alert-info">Chưa có bệnh nhân nào.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:70px;">ID</th>
                            <th>Họ tên</th>
                            <th style="width:140px;">Ngày sinh</th>
                            <th style="width:150px;">Dân tộc</th>
                            <th style="width:220px;">Tài khoản</th>
                            <th style="width:200px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Items)
                        {
                            <tr>
                                <td>@x.Id</td>

                                <td class="fw-semibold">
                                    <i class="fas fa-user text-primary me-1"></i>
                                    @(string.IsNullOrWhiteSpace(x.FullName)
                                                                ? (x.User?.UserName ?? x.User?.Email ?? "(Chưa có)")
                                                                : x.FullName)
                        </td>

                                <td>@(x.DateOfBirth?.ToString("dd/MM/yyyy"))</td>

                                <td>@x.Ethnic</td>

                                <td>
                            @if (!string.IsNullOrEmpty(x.UserId))
                                    {
                                        <span class="badge bg-success">Đã liên kết</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Khách</span>
                                    }

                                    <div class="small text-muted mt-1">
                                        @(x.User?.UserName ?? x.User?.Email ?? "-")
                                    </div>
                                </td>

                                <td class="text-nowrap">
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@x.Id">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@x.Id">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@x.Id">
                                        <i class="fas fa-trash-alt"></i> Xoá
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav class="mt-3">
                <ul class="pagination justify-content-center">

                    <li class="page-item @(Model.PagingInfo.PageIndex == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-route-page="@(Model.PagingInfo.PageIndex - 1)"
                           asp-route-search="@Model.Search">«</a>
                    </li>

                    @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PagingInfo.PageIndex == i ? "active" : "")">
                            <a class="page-link"
                               asp-route-page="@i"
                               asp-route-search="@Model.Search">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PagingInfo.PageIndex == Model.PagingInfo.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-route-page="@(Model.PagingInfo.PageIndex + 1)"
                           asp-route-search="@Model.Search">»</a>
                    </li>

                </ul>
            </nav>
        }
    </div>

</div>
