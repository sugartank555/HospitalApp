@model HospitalApp.Models.Patient
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}
<h2>Chi tiết bệnh nhân</h2>
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Ngày sinh</dt>
    <dd class="col-sm-10">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-2">Dân tộc</dt>
    <dd class="col-sm-10">@Model.Ethnic</dd>
    <dt class="col-sm-2">Tài khoản</dt>
    <dd class="col-sm-10">@((Model.User?.UserName ?? Model.User?.Email) ?? "-")</dd>
</dl>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
<a class="btn btn-secondary" asp-action="Index">Về danh sách</a>
