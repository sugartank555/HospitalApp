@model HospitalApp.Models.Patient

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết bệnh nhân";

    string displayName = string.IsNullOrWhiteSpace(Model.FullName)
        ? (Model.User?.UserName ?? Model.User?.Email ?? "(Chưa có)")
        : Model.FullName!;
}

<div class="container-fluid py-3">

    <!-- HEADER -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-user me-2"></i>
                @ViewData["Title"]
            </h4>
        </div>

        <div class="card-body px-4 py-4">

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Msg"] != null)
            {
                <div class="alert alert-success">@TempData["Msg"]</div>
            }

            <!-- PATIENT INFO -->
            <dl class="row mb-0">

                <dt class="col-sm-3 col-lg-2 fw-semibold">Mã bệnh nhân</dt>
                <dd class="col-sm-9 col-lg-10">@Model.Id</dd>

                <dt class="col-sm-3 col-lg-2 fw-semibold">Họ tên</dt>
                <dd class="col-sm-9 col-lg-10">@displayName</dd>

                <dt class="col-sm-3 col-lg-2 fw-semibold">Ngày sinh</dt>
                <dd class="col-sm-9 col-lg-10">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 col-lg-2 fw-semibold">Dân tộc</dt>
                <dd class="col-sm-9 col-lg-10">@(!string.IsNullOrWhiteSpace(Model.Ethnic) ? Model.Ethnic : "-")</dd>

                <dt class="col-sm-3 col-lg-2 fw-semibold">Tài khoản</dt>
                <dd class="col-sm-9 col-lg-10">
                    @if (!string.IsNullOrEmpty(Model.UserId))
                    {
                        <span class="badge bg-success me-2">Đã liên kết</span>
                        <span class="fw-semibold">
                            @(Model.User?.UserName ?? Model.User?.Email ?? "-")
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Khách</span>
                    }
                </dd>

            </dl>

        </div>
    </div>


    <!-- ACTION BUTTONS -->
    <div class="d-flex gap-2">

        <a class="btn btn-primary px-3"
           asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-edit me-1"></i> Sửa
        </a>

        <a class="btn btn-outline-danger px-3"
           asp-action="Delete" asp-route-id="@Model.Id">
            <i class="fas fa-trash-alt me-1"></i> Xoá
        </a>

        <a class="btn btn-secondary px-3"
           asp-action="Index">
            <i class="fas fa-list me-1"></i> Về danh sách
        </a>

    </div>

</div>
