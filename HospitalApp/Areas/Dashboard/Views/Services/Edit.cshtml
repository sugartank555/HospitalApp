@model HospitalApp.Models.Service
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa dịch vụ";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-edit me-2"></i>
                Sửa dịch vụ
            </h4>
        </div>

        <div class="card-body">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Tên dịch vụ -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Giá -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control form-control-lg" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Khoa -->
                <div class="mb-3">
                    <label asp-for="MedicalDepartmentId" class="form-label fw-semibold">Khoa / Phòng ban</label>
                    <select asp-for="MedicalDepartmentId" class="form-select form-select-lg"
                            asp-items="ViewBag.MedicalDepartmentId">
                        <option value="">— Chọn khoa / phòng ban —</option>
                    </select>
                    <span asp-validation-for="MedicalDepartmentId" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a class="btn btn-secondary px-4" asp-action="Index">
                        <i class="fas fa-times me-1"></i> Hủy
                    </a>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
