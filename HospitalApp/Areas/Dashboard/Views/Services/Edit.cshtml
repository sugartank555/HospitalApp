@model HospitalApp.Models.Service
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa dịch vụ";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MedicalDepartmentId" class="form-label">Khoa/Phòng ban</label>
        <select asp-for="MedicalDepartmentId" class="form-select" asp-items="ViewBag.MedicalDepartmentId">
            <option value="">— Chọn khoa/phòng —</option>
        </select>
        <span asp-validation-for="MedicalDepartmentId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
