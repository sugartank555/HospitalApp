@model HospitalApp.Models.Service
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thêm dịch vụ";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-plus-circle me-2"></i>
                Thêm dịch vụ mới
            </h4>
        </div>

        <div class="card-body">

            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- TÊN -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên dịch vụ..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- KHOA -->
                <div class="mb-3">
                    <label asp-for="MedicalDepartmentId" class="form-label fw-semibold">Khoa / Phòng ban</label>
                    <select asp-for="MedicalDepartmentId"
                            class="form-select"
                            asp-items="ViewBag.MedicalDepartmentId"
                            required>
                        <option value="0">— Chọn khoa/phòng —</option>
                    </select>
                    <span asp-validation-for="MedicalDepartmentId" class="text-danger"></span>
                </div>

                <!-- GIÁ -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Nhập giá dịch vụ..." />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- MÔ TẢ -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"
                              placeholder="Mô tả chi tiết dịch vụ..."></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a class="btn btn-secondary px-3" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
