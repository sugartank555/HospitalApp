@model HospitalApp.Models.Service
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-info-circle me-2"></i>
                Chi tiết dịch vụ
            </h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3 fw-semibold">Tên dịch vụ</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Khoa / Phòng ban</dt>
                <dd class="col-sm-9">
                    @Model.MedicalDepartment?.Name ?? "-"
                </dd>

                <dt class="col-sm-3 fw-semibold">Giá</dt>
                <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>

                <dt class="col-sm-3 fw-semibold">Mô tả</dt>
                <dd class="col-sm-9">
                    @(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "-")
                </dd>

            </dl>
        </div>

        <div class="card-footer d-flex gap-2">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-1"></i> Sửa
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fas fa-list me-1"></i> Danh sách
            </a>
        </div>
    </div>

</div>
