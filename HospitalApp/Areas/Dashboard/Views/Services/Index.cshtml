@model HospitalApp.ViewModels.ServiceIndexViewModel
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Dịch vụ";

    var search = Model?.Search;
    var currentSort = Model?.SortOrder;
    var priceSort = ViewData["PriceSort"] as string;
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-concierge-bell me-2"></i>
                Danh sách dịch vụ
            </h4>
        </div>

        <div class="card-body">

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-1"></i> Thêm dịch vụ
                </a>
            </div>

            <!-- Search -->
            <form asp-action="Index" method="get" class="mb-3">
                <div class="input-group">
                    <input name="search"
                           value="@search"
                           class="form-control"
                           placeholder="Tìm theo tên, mô tả, khoa… hoặc nhập đúng giá" />

                    <!-- Giữ nguyên sort khi tìm kiếm -->
                    <input type="hidden" name="sortOrder" value="@currentSort" />

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Tìm kiếm
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
                    </a>
                </div>
            </form>

            <!-- If Empty -->
            @if (!(Model?.Items?.Any() ?? false))
            {
                <div class="alert alert-info mb-0">
                    Chưa có dịch vụ nào.
                </div>
            }
            else
            {
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width:80px;">ID</th>
                                <th style="width:260px;">Tên dịch vụ</th>
                                <th style="width:220px;">Khoa</th>
                                <th>
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@priceSort"
                                       asp-route-search="@search"
                                       asp-route-page="@(Model.PagingInfo.PageIndex)"
                                       class="text-decoration-none">

                                      

                                        Giá
                                        @if (currentSort == "price_desc")
                                        {
                                            <i class="bi bi-caret-down-fill ms-1"></i>
                                        }
                                        else if (currentSort == "price")
                                        {
                                            <i class="bi bi-caret-up-fill ms-1"></i>
                                        }
                                    </a>
                                </th>
                                <th style="width:240px;"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var x in Model.Items)
                            {
                                <tr>
                                    <td>@x.Id</td>
                                    <td class="fw-semibold">@x.Name</td>
                                    <td>@(x.MedicalDepartment?.Name ?? "-")</td>
                                    <td>@x.Price.ToString("N0") VNĐ</td>

                                    <td class="text-nowrap">
                                        <a class="btn btn-sm btn-outline-info me-1"
                                           asp-action="Details" asp-route-id="@x.Id">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>

                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-action="Edit" asp-route-id="@x.Id">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>

                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-action="Delete" asp-route-id="@x.Id">
                                            <i class="fas fa-trash-alt"></i> Xoá
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.PagingInfo.TotalPages > 1)
                {
                    <nav aria-label="Phân trang dịch vụ">
                        <ul class="pagination justify-content-center">

                            <!-- Previous -->
                            <li class="page-item @(Model.PagingInfo.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.PagingInfo.PageIndex - 1)"
                                   asp-route-search="@search"
                                   asp-route-sortOrder="@currentSort">
                                    «
                                </a>
                            </li>

                            <!-- Page numbers -->
                            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PagingInfo.PageIndex ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-search="@search"
                                       asp-route-sortOrder="@currentSort">
                                        @i
                                    </a>
                                </li>
                            }

                            <!-- Next -->
                            <li class="page-item @(Model.PagingInfo.HasNextPage ? "" : "disabled")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.PagingInfo.PageIndex + 1)"
                                   asp-route-search="@search"
                                   asp-route-sortOrder="@currentSort">
                                    »
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>

</div>
