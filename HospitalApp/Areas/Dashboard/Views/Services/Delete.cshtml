@model HospitalApp.Models.Service
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xoá dịch vụ";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-danger text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Xác nhận xoá dịch vụ
            </h4>
        </div>

        <div class="card-body">

            <div class="alert alert-warning">
                Bạn có chắc chắn muốn xoá dịch vụ:
                <strong class="text-danger">@Model.Name</strong>?
            </div>

            <dl class="row mb-3">
                <dt class="col-sm-3 fw-semibold">Tên dịch vụ</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Khoa</dt>
                <dd class="col-sm-9">@Model.MedicalDepartment?.Name ?? "-"</dd>

                <dt class="col-sm-3 fw-semibold">Giá</dt>
                <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>
            </dl>

            <form method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex gap-2">
                    <button class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-1"></i> Xoá
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>

        </div>

    </div>

</div>
