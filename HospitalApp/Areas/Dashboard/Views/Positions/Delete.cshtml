@model HospitalApp.Models.Position
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xoá chức danh";
}

<div class="container-fluid py-4">

    <div class="card shadow-sm border-0">

        <!-- HEADER -->
        <div class="card-header bg-danger text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-trash-alt me-2"></i>
                Xoá chức danh
            </h4>
        </div>

        <!-- BODY -->
        <div class="card-body">

            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Bạn có chắc chắn muốn xoá chức danh sau?
            </div>

            <dl class="row mb-0">
                <dt class="col-sm-3 col-md-2 fw-semibold">ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.Id</dd>

                <dt class="col-sm-3 col-md-2 fw-semibold">Tên chức danh</dt>
                <dd class="col-sm-9 col-md-10">@Model.Name</dd>
            </dl>

        </div>

        <!-- FOOTER BUTTONS -->
        <div class="card-footer bg-light d-flex gap-2">
            <form method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button class="btn btn-danger px-4">
                    <i class="fas fa-trash me-1"></i> Xoá
                </button>
            </form>

            <a class="btn btn-secondary px-4" asp-action="Index">
                <i class="fas fa-arrow-left me-1"></i> Hủy
            </a>
        </div>

    </div>

</div>
