@model HospitalApp.Models.Position
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết chức danh";
}

<div class="container-fluid py-4">

    <div class="card shadow-sm border-0">

        <!-- HEADER -->
        <div class="card-header bg-info text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-info-circle me-2"></i>
                Chi tiết chức danh
            </h4>
        </div>

        <!-- BODY -->
        <div class="card-body">

            <dl class="row mb-0">
                <dt class="col-sm-3 col-md-2 fw-semibold">ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.Id</dd>

                <dt class="col-sm-3 col-md-2 fw-semibold">Tên chức danh</dt>
                <dd class="col-sm-9 col-md-10">@Model.Name</dd>
            </dl>

        </div>

        <!-- FOOTER BUTTONS -->
        <div class="card-footer bg-light d-flex gap-2">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-1"></i> Sửa
            </a>

            <a class="btn btn-secondary" asp-action="Index">
                <i class="fas fa-list me-1"></i> Về danh sách
            </a>
        </div>

    </div>
</div>
