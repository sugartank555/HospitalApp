@model HospitalApp.Models.MedicalTest
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết xét nghiệm";
}

<div class="card shadow-sm border-0">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold m-0">
            <i class="fas fa-vial text-primary me-2"></i> @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1">Thông tin chi tiết của xét nghiệm #@Model.Id</p>
    </div>

    <!-- Body -->
    <div class="card-body px-4 pb-4">

        <dl class="row mb-0">

            <!-- NAME -->
            <dt class="col-sm-4 fw-semibold text-secondary">
                <i class="fas fa-microscope me-1"></i> Tên xét nghiệm
            </dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <!-- TIME -->
            <dt class="col-sm-4 fw-semibold text-secondary mt-3">
                <i class="fas fa-clock me-1"></i> Thời gian thực hiện
            </dt>
            <dd class="col-sm-8 mt-3">
                @Model.TestTime?.ToString("dd/MM/yyyy HH:mm")
            </dd>

            <!-- PRICE -->
            <dt class="col-sm-4 fw-semibold text-secondary mt-3">
                <i class="fas fa-money-bill-wave me-1"></i> Tổng tiền
            </dt>
            <dd class="col-sm-8 mt-3">
                @Model.TotalPrice.ToString("N0") VNĐ
            </dd>

            <!-- RECORD -->
            <dt class="col-sm-4 fw-semibold text-secondary mt-3">
                <i class="fas fa-file-medical me-1"></i> Thuộc hồ sơ khám
            </dt>
            <dd class="col-sm-8 mt-3">
                #@Model.MedicalRecordId – @Model.MedicalRecord?.Patient?.FullName
            </dd>


        </dl>

    </div>

    <!-- Footer -->
    <div class="card-footer bg-white border-0 px-4 pb-4 pt-2 d-flex justify-content-between">

        <a asp-action="Index" class="btn btn-light border">
            <i class="fas fa-arrow-left me-1"></i> Về danh sách
        </a>

        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="btn btn-primary px-4">
            <i class="fas fa-edit me-1"></i> Sửa
        </a>

    </div>

</div>
