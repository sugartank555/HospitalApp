@model HospitalApp.ViewModels.MedicalTestIndexViewModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xét nghiệm";

    var search = ViewData["Search"] as string;
    var currentSort = (ViewData["CurrentSort"] as string) ?? "";

    var page = (int)(ViewData["Page"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
    var totalItems = (int)(ViewData["TotalItems"] ?? 0);
    var pageSize = (int)(ViewData["PageSize"] ?? 10);

    var from = totalItems == 0 ? 0 : (page - 1) * pageSize + 1;
    var to = Math.Min(page * pageSize, totalItems);
}

<div class="card shadow-sm border-0">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold m-0">
            <i class="fas fa-vials text-primary me-2"></i> @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1">Quản lý danh sách xét nghiệm bệnh nhân</p>
    </div>

    <div class="card-body px-4">

        <!-- Top Action Row -->
        <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus me-1"></i> Thêm xét nghiệm
            </a>

            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input type="hidden" name="sortOrder" value="@currentSort" />
                <input type="hidden" name="page" value="1" />

                <input type="text" name="search" value="@search" class="form-control"
                       placeholder="Tìm tên, ngày, giá, Id, MedicalRecordId..." />

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-undo"></i>
                </a>
            </form>
        </div>

        <!-- Showing count -->
        @if (totalItems > 0)
        {
            <div class="small text-muted mb-2">
                Hiển thị @from–@to / @totalItems
            </div>
        }

        @if (Model.Items == null || !Model.Items.Any())

        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-1"></i> Chưa có xét nghiệm nào.
            </div>
        }
        else
        {
            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light fw-semibold">
                        <tr>
                            <th>#</th>

                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-sortOrder="@ViewData["NameSort"]"
                                   asp-route-search="@search"
                                   asp-route-page="1">
                                    Tên xét nghiệm
                                    @if (currentSort == "name")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (currentSort == "name_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-sortOrder="@ViewData["TimeSort"]"
                                   asp-route-search="@search"
                                   asp-route-page="1">
                                    Thời gian
                                    @if (currentSort == "time")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (currentSort == "time_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-sortOrder="@ViewData["RecordIdSort"]"
                                   asp-route-search="@search"
                                   asp-route-page="1">
                                    Hồ sơ khám
                                    @if (currentSort == "record")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (currentSort == "record_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-sortOrder="@ViewData["PriceSort"]"
                                   asp-route-search="@search"
                                   asp-route-page="1">
                                    Tổng tiền
                                    @if (currentSort == "price")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (currentSort == "price_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>
                            <th></th>
                            <th class="text-end" style="width:220px">Thao tác</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var x in Model.Items)
                        {
                            <tr>
                                <td>@x.Id</td>
                                <td>@x.Name</td>
                                <td>@x.TestTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@x.MedicalRecordId</td>
                                <td>@x.TotalPrice.ToString("N0") VNĐ</td>
                                <td>
                                                              

                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-info me-1"
                                       asp-action="Details" asp-route-id="@x.Id">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a class="btn btn-sm btn-outline-primary me-1"
                                       asp-action="Edit" asp-route-id="@x.Id">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a class="btn btn-sm btn-outline-danger"
                                       asp-action="Delete" asp-route-id="@x.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(Model.PagingInfo.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(Model.PagingInfo.PageIndex - 1)"
                               asp-route-search="@Model.Search"
                               asp-route-sortOrder="@Model.SortOrder">«</a>
                        </li>

                        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PagingInfo.PageIndex == i ? "active" : "")">
                                <a class="page-link"
                                   asp-route-page="@i"
                                   asp-route-search="@Model.Search"
                                   asp-route-sortOrder="@Model.SortOrder">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.PagingInfo.PageIndex == Model.PagingInfo.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(Model.PagingInfo.PageIndex + 1)"
                               asp-route-search="@Model.Search"
                               asp-route-sortOrder="@Model.SortOrder">»</a>
                        </li>

                    </ul>
                </nav>

            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(page == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(page - 1)"
                               asp-route-search="@search"
                               asp-route-sortOrder="@currentSort">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (var i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == page ? "active" : "")">
                                <a class="page-link"
                                   asp-route-page="@i"
                                   asp-route-search="@search"
                                   asp-route-sortOrder="@currentSort">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-route-page="@(page + 1)"
                               asp-route-search="@search"
                               asp-route-sortOrder="@currentSort">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>

                    </ul>
                </nav>
            }
        }
    </div>
</div>
