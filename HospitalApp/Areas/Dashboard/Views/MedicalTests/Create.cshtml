@model HospitalApp.ViewModels.CreateMedicalTestVM

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thêm xét nghiệm";
}

<div class="card shadow-sm border-0">

    <!-- Header -->
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold m-0">
            <i class="fas fa-vial text-primary me-2"></i> @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1">Tạo mới một xét nghiệm và chọn dịch vụ kèm theo</p>
    </div>

    <!-- Form -->
    <form method="post">
        @Html.AntiForgeryToken()

        <div class="card-body px-4 pb-4">

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- NAME -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-microscope me-1 text-secondary"></i> Tên xét nghiệm
                </label>
                <input asp-for="Name" class="form-control form-control-lg"
                       placeholder="VD: Xét nghiệm máu tổng quát" />
            </div>

            <!-- TIME -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-clock me-1 text-secondary"></i> Thời gian xét nghiệm
                </label>
                <input asp-for="TestTime" type="datetime-local"
                       class="form-control form-control-lg" />
            </div>

            <!-- MEDICAL RECORD -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-file-medical me-1 text-secondary"></i> Thuộc hồ sơ khám
                </label>
                <select asp-for="MedicalRecordId"
                        class="form-select form-select-lg"
                        asp-items="Model.MedicalRecordList">
                </select>
            </div>

            <hr />

            <!-- SERVICES -->
            <h5 class="fw-bold text-primary mb-3">
                <i class="fas fa-list me-1"></i> Chọn dịch vụ kèm theo
            </h5>

            <div class="table-responsive mb-3">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:50px;"></th>
                            <th>Dịch vụ</th>
                            <th style="width:160px;">Đơn giá</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var sv in Model.ServiceList)
                        {
                            <tr>
                                <td class="text-center">
                                    <input type="checkbox" name="ServiceIds" value="@sv.Value" />
                                </td>
                                <td>@sv.Text.Split("–")[0]</td>
                                <td>@sv.Text.Split("–")[1]</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-info">
                <strong>Lưu ý:</strong> Tổng tiền sẽ được hệ thống tự tính theo dịch vụ đã chọn.
            </div>

        </div>

        <!-- Footer -->
        <div class="card-footer bg-white border-0 px-4 pb-4 pt-2 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-light border">
                <i class="fas fa-arrow-left me-1"></i> Hủy
            </a>

            <button class="btn btn-primary px-4">
                <i class="fas fa-save me-1"></i> Lưu xét nghiệm
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
