@model HospitalApp.Areas.Dashboard.Controllers.CreateUserVm
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Tạo tài khoản";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<form method="post" class="card">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">UserName</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">SĐT</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label class="form-label">Gán vai trò (nhập tên role, phân cách bởi dấu phẩy)</label>
            <input name="Roles" class="form-control" placeholder="VD: Admin,Doctor" />
            <small class="text-muted">Vai trò phải tồn tại trước trong hệ thống.</small>
        </div>
    </div>
    <div class="card-footer d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">← Quay lại</a>
        <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Tạo</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
