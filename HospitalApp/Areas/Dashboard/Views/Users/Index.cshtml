@model HospitalApp.Areas.Dashboard.Controllers.UsersIndexVm
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="card shadow-sm border-0">
    <div class="card-body pb-2">
        <h3 class="fw-bold mb-3">
            <i class="fas fa-users-cog me-2"></i> @ViewData["Title"]
        </h3>

        <!-- FILTER BAR -->
        <form method="get" class="row g-3 mb-2">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Từ khóa</label>
                <input name="search"
                       value="@Model.Search"
                       class="form-control"
                       placeholder="UserName / Email / SĐT..." />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Vai trò</label>
                <select name="role" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var r in Model.AllRoles)
                    {
                        <option value="@r" selected="@(Model.Role == r ? "selected" : null)">
                            @r
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label fw-semibold">Kích thước</label>
                <select name="pageSize" class="form-select">
                    @{
                        int[] sizes = { 10, 20, 50, 100 };
                        foreach (var s in sizes)
                        {
                            <option value="@s" selected="@(Model.PageSize == s ? "selected" : null)">
                                @s
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-3 d-flex gap-2 align-items-end">
                <button class="btn btn-primary w-100">
                    <i class="fas fa-filter me-1"></i> Lọc
                </button>
                <a class="btn btn-outline-secondary" asp-action="Index">Reset</a>
                <input type="hidden" name="sortOrder" value="@Model.SortOrder" />
                <input type="hidden" name="page" value="1" />
            </div>
        </form>

        <div class="mb-3">
            <a class="btn btn-success" asp-action="Create">
                <i class="fas fa-user-plus me-1"></i> Tạo tài khoản
            </a>
        </div>

        <!-- TABLE -->
        @if (Model.Items == null || !Model.Items.Any())
        {
            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-1"></i> Không có người dùng nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light fw-semibold">
                        <tr>
                            <th>
                                @* Sort UserName *@
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-search="@Model.Search"
                                   asp-route-role="@Model.Role"
                                   asp-route-page="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sortOrder="@(ViewData["NameSort"])">
                                    UserName
                                    @if (Model.SortOrder == "name")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (Model.SortOrder == "name_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th>
                                @* Sort Email *@
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-search="@Model.Search"
                                   asp-route-role="@Model.Role"
                                   asp-route-page="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sortOrder="@(ViewData["EmailSort"])">
                                    Email
                                    @if (Model.SortOrder == "email")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (Model.SortOrder == "email_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th>SĐT</th>
                            <th>Vai trò</th>

                            <th>
                                <a class="text-decoration-none text-dark"
                                   asp-action="Index"
                                   asp-route-search="@Model.Search"
                                   asp-route-role="@Model.Role"
                                   asp-route-page="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sortOrder="@(ViewData["DateSort"])">
                                    Lockout
                                    @if (Model.SortOrder == "date")
                                    {
                                        <i class="fas fa-sort-up ms-1 text-primary"></i>
                                    }
                                    else if (Model.SortOrder == "date_desc")
                                    {

                                        <i class="fas fa-sort-down ms-1 text-primary"></i>
                                    }
                                </a>
                            </th>

                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var u in Model.Items)
                        {
                            bool locked = u.LockoutEnd.HasValue && u.LockoutEnd.Value.UtcDateTime > DateTime.UtcNow;

                            <tr>
                                <td>@u.UserName</td>
                                <td>@u.Email</td>
                                <td>@u.Phone</td>

                                <td>
                                    @if (u.Roles.Any())
                                    {
                                        foreach (var r in u.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@r</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>

                                <td>
                                    @if (locked)
                                    {
                                        <span class="badge bg-danger">
                                            Khoá đến @u.LockoutEnd?.LocalDateTime.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Đang mở</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a asp-action="EditRoles" asp-route-id="@u.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-user-shield"></i>
                                    </a>

                                    <form asp-action="ResetPassword" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button class="btn btn-sm btn-outline-warning me-1"
                                                onclick="return confirm('Đặt lại mật khẩu?')">
                                            <i class="fas fa-key"></i>
                                        </button>
                                    </form>

                                    @if (locked)
                                    {
                                        <form asp-action="Unlock" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-success me-1">
                                                <i class="fas fa-unlock"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Lock" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-danger me-1"
                                                    onclick="return confirm('Khoá tài khoản 30 ngày?')">
                                                <i class="fas fa-lock"></i>
                                            </button>
                                        </form>
                                    }

                                    <form asp-action="Delete" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button class="btn btn-sm btn-danger"
                                                onclick="return confirm('Xoá tài khoản này?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- PAGINATION -->
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-route-page="@(Model.Page - 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-search="@Model.Search"
                           asp-route-role="@Model.Role"
                           asp-route-sortOrder="@Model.SortOrder">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link"
                               asp-route-page="@i"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-search="@Model.Search"
                               asp-route-role="@Model.Role"
                               asp-route-sortOrder="@Model.SortOrder">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-route-page="@(Model.Page + 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-search="@Model.Search"
                           asp-route-role="@Model.Role"
                           asp-route-sortOrder="@Model.SortOrder">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Msg"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
