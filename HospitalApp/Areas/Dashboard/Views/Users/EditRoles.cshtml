@model HospitalApp.Areas.Dashboard.Controllers.EditRolesVm
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Cập nhật vai trò";
}
<h2 class="mb-3">@ViewData["Title"] - @Model.UserName</h2>

<form asp-action="EditRoles" method="post" class="card">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="card-body">
        <div class="row">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="col-md-4 mb-2">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Roles[i].Selected" />
                        <label class="form-check-label">@Model.Roles[i].Name</label>
                        <input type="hidden" asp-for="Roles[i].Name" />
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="card-footer d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">← Quay lại</a>
        <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Lưu thay đổi</button>
    </div>
</form>
