@model HospitalApp.Models.MedicalDepartment
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";

    var action = (ViewContext.RouteData.Values["action"]?.ToString() ?? "");
    var isCreate = string.Equals(action, "Create", System.StringComparison.OrdinalIgnoreCase);
    var isEdit = string.Equals(action, "Edit", System.StringComparison.OrdinalIgnoreCase);
}
<h2>@(isCreate ? "Thêm khoa" : "Sửa khoa")</h2>

<form method="post">
    @Html.AntiForgeryToken()

    @* Khi Edit thì gửi kèm Id *@
    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
