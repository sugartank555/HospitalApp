@model HospitalApp.Models.MedicalDepartment
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết khoa / phòng ban";
}
<div class="container-fluid py-3">

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-building me-2"></i>
                Chi tiết khoa / phòng ban
            </h4>
        </div>

        <div class="card-body px-4 py-4">
            <dl class="row mb-0">

                <dt class="col-sm-3 col-md-2 fw-semibold">Tên khoa</dt>
                <dd class="col-sm-9 col-md-10">@Model.Name</dd>

                <dt class="col-sm-3 col-md-2 fw-semibold">Mô tả</dt>
                <dd class="col-sm-9 col-md-10">
                    @(string.IsNullOrWhiteSpace(Model.Description) ? "-" : Model.Description)
                </dd>

            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-warning px-4" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-edit me-1"></i> Sửa
        </a>

        <a class="btn btn-secondary px-4" asp-action="Index">
            <i class="fas fa-arrow-left me-1"></i> Về danh sách
        </a>
    </div>

</div>
