@model HospitalApp.Models.MedicalDepartment
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xoá khoa / phòng ban";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Xoá khoa / phòng ban</h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Bạn có chắc chắn muốn xoá khoa: <strong>@Model.Name</strong>?
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-3">Tên khoa</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>

                    <form method="post" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary px-3">
                                <i class="bi bi-arrow-left"></i> Hủy
                            </a>

                            <button class="btn btn-danger px-4">
                                <i class="bi bi-trash me-1"></i> Xoá
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
