@model HospitalApp.Models.Expertise
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thêm chuyên môn";
}

<div class="container-fluid py-4">

    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-plus-circle me-2"></i>
                Thêm chuyên môn
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body">

            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Tên chuyên môn</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên chuyên môn..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <hr />

                <div class="text-end">
                    <button class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a class="btn btn-secondary px-4" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>
                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
