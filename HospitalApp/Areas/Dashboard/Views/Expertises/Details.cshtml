@model HospitalApp.Models.Expertise
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết chuyên môn";
}

<div class="container-fluid py-4">

    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-info text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-stethoscope me-2"></i>
                Chi tiết chuyên môn
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body">

            <dl class="row mb-0">
                <dt class="col-sm-3 col-md-2">ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.Id</dd>

                <dt class="col-sm-3 col-md-2">Tên chuyên môn</dt>
                <dd class="col-sm-9 col-md-10 fw-semibold">@Model.Name</dd>
            </dl>

        </div>

        <!-- Footer -->
        <div class="card-footer bg-light d-flex justify-content-end gap-2">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-1"></i> Sửa
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fas fa-arrow-left me-1"></i> Về danh sách
            </a>
        </div>

    </div>

</div>
