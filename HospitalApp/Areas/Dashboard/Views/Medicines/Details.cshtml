@model HospitalApp.Models.Medicine
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết thuốc";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-capsules me-2"></i> Chi tiết thuốc
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body">

            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3 fw-semibold">Tên thuốc</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Giá</dt>
                <dd class="col-sm-9">
                    @Model.Price.ToString("N0") VNĐ
                </dd>
            </dl>

        </div>

        <!-- Footer actions -->
        <div class="card-footer bg-light d-flex justify-content-end gap-2">
            <a class="btn btn-primary px-4"
               asp-action="Edit"
               asp-route-id="@Model.Id">
                <i class="bi bi-pencil-square me-1"></i> Sửa
            </a>

            <a class="btn btn-secondary px-3" asp-action="Index">
                <i class="bi bi-arrow-left me-1"></i> Về danh sách
            </a>
        </div>

    </div>

</div>
