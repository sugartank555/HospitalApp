@model HospitalApp.Models.Medicine
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết thuốc";
}
<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Tên thuốc</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Giá</dt>
    <dd class="col-sm-9">@Model.Price</dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
<a class="btn btn-secondary" asp-action="Index">Về danh sách</a>
