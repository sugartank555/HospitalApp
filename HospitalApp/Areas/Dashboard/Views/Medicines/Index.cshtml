@model IEnumerable<HospitalApp.Models.Medicine>
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thuốc";
    var search = ViewData["Search"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-capsules me-2"></i>
                Danh sách thuốc
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body">

            <!-- Alerts -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Msg"] != null)
            {
                <div class="alert alert-success">@TempData["Msg"]</div>
            }

            <!-- Actions -->
            <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-1"></i> Thêm thuốc
                </a>
            </div>

            <!-- Search -->
            <form asp-action="Index" method="get" class="mb-3">
                <div class="input-group">
                    <input name="search"
                           value="@search"
                           class="form-control"
                           placeholder="Tìm theo tên, hoạt chất, NSX, đơn vị… hoặc nhập ID/giá" />

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Tìm kiếm
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
                    </a>
                </div>
            </form>

            <!-- Empty -->
            @if (!(Model?.Any() ?? false))
            {
                <div class="alert alert-info mb-0">
                    Chưa có thuốc nào.
                </div>
            }
            else
            {
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width:80px;">ID</th>

                                <th>
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["NameSort"]"
                                       asp-route-search="@search">
                                        Tên thuốc
                                        @if (currentSort == "name_desc")
                                        {
                                            <i class="bi bi-caret-down-fill"></i>
                                        }
                                        else if (currentSort == "name")
                                        {
                                            <i class="bi bi-caret-up-fill"></i>
                                        }
                                    </a>
                                </th>

                                <th style="width:160px;">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["PriceSort"]"
                                       asp-route-search="@search">
                                        Giá
                                        @if (currentSort == "price_desc")
                                        {
                                            <i class="bi bi-caret-down-fill"></i>
                                        }
                                        else if (currentSort == "price")
                                        {
                                            <i class="bi bi-caret-up-fill"></i>
                                        }
                                    </a>
                                </th>

                                <th style="width:200px;"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.Id</td>
                                    <td class="fw-semibold">@x.Name</td>
                                    <td>@x.Price.ToString("N0") VNĐ</td>

                                    <td class="text-nowrap">
                                        <a class="btn btn-sm btn-outline-info me-1"
                                           asp-action="Details"
                                           asp-route-id="@x.Id">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>

                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-action="Edit"
                                           asp-route-id="@x.Id">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>

                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-action="Delete"
                                           asp-route-id="@x.Id">
                                            <i class="fas fa-trash-alt"></i> Xoá
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    <div class="d-flex justify-content-center mt-4">
                        <nav>
                            <ul class="pagination">

                                @if (ViewBag.Page > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(ViewBag.Page - 1)&search=@ViewData["Search"]&sortOrder=@ViewData["CurrentSort"]">«</a>
                                    </li>
                                }

                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                        <a class="page-link" href="?page=@i&search=@ViewData["Search"]&sortOrder=@ViewData["CurrentSort"]">@i</a>
                                    </li>
                                }

                                @if (ViewBag.Page < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(ViewBag.Page + 1)&search=@ViewData["Search"]&sortOrder=@ViewData["CurrentSort"]">»</a>
                                    </li>
                                }

                            </ul>
                        </nav>
                    </div>

                </div>
            }
        </div>

    </div>

</div>
