@model IEnumerable<HospitalApp.Models.Medicine>
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thuốc";
    var search = ViewData["Search"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<p class="d-flex justify-content-between align-items-center gap-2 flex-wrap">
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus"></i> Thêm thuốc
    </a>

   
</p>

<form asp-action="Index" method="get" class="ms-auto">
    <div class="input-group">
        <input name="search" value="@search" class="form-control"
               placeholder="Tìm theo tên, hoạt chất, NSX, đơn vị... hoặc nhập giá/ID" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search me-1"></i> Tìm kiếm
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
        </a>
    </div>
</form>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Chưa có thuốc nào.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:80px;">ID</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]" asp-route-search="@search">
                        Tên thuốc
                        @if (currentSort == "name_desc")
                        {
                            <i class="bi bi-caret-down-fill"></i>
                        }
                        else if (currentSort == "name")
                        {

                            <i class="bi bi-caret-up-fill"></i>
                        }
                    </a>
                </th>
                <th style="width:180px;">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSort"]" asp-route-search="@search">
                        Giá
                        @if (currentSort == "price_desc")
                        {
                            <i class="bi bi-caret-down-fill"></i>
                        }
                        else if (currentSort == "price")
                        {

                            <i class="bi bi-caret-up-fill"></i>
                        }
                    </a>
                </th>
                <th style="width:220px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Name</td>
                    <td>@x.Price.ToString("N0") VNĐ</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@x.Id">
                            <i class="fas fa-eye"></i> Xem
                        </a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@x.Id">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@x.Id">
                            <i class="fas fa-trash-alt"></i> Xoá
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
