@model HospitalApp.Models.Medicine
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thêm thuốc";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="bi bi-capsule-pill me-2"></i>
                Thêm thuốc
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body">

            <form method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Footer buttons -->
                <div class="text-end mt-3">
                    <button class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Lưu
                    </button>
                    <a class="btn btn-secondary px-3" asp-action="Index">
                        <i class="bi bi-arrow-left me-1"></i> Hủy
                    </a>
                </div>
            </form>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
