@model HospitalApp.Models.Medicine
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa thuốc";
}

<div class="container-fluid py-3">

    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0 fw-semibold">
                <i class="fas fa-pill me-2"></i> Sửa thông tin thuốc
            </h4>
        </div>

        <!-- Body -->
        <div class="card-body">

            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Tên thuốc -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Giá -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <hr />

                <!-- Buttons -->
                <div class="text-end">
                    <button class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>

                    <a asp-action="Index" class="btn btn-secondary px-3">
                        <i class="bi bi-arrow-left-circle me-1"></i> Hủy
                    </a>
                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
