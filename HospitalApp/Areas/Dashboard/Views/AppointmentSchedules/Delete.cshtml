@model HospitalApp.Models.AppointmentSchedule
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Xóa lịch hẹn";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold text-danger m-0">
            <i class="fas fa-exclamation-triangle me-2"></i> Xác nhận xóa lịch hẹn
        </h3>
        <p class="text-muted mt-1">Hành động này không thể hoàn tác</p>
    </div>

    <div class="card-body px-4 pb-4">
        <p class="fs-5">
            Bạn có chắc chắn muốn xóa lịch hẹn
            <strong class="text-dark">#@Model.Id</strong>?
        </p>

        <ul class="list-unstyled ms-2">
            <li class="mb-1">
                <i class="fas fa-calendar-day text-secondary me-2"></i>
                <strong>Ngày:</strong> @Model.Date.ToString("dd/MM/yyyy")
            </li>
            <li class="mb-1">
                <i class="fas fa-clock text-secondary me-2"></i>
                <strong>Khung giờ:</strong> @Model.TimeFrame
            </li>
            <li class="mb-1">
                <i class="fas fa-user-injured text-secondary me-2"></i>
                <strong>Bệnh nhân:</strong> @Model.Patient?.FullName (@Model.PatientId)
            </li>
            <li class="mb-1">
                <i class="fas fa-user-md text-secondary me-2"></i>
                <strong>Bác sĩ:</strong> @Model.Doctor?.FullName (@Model.DoctorId)
            </li>
        </ul>

        <p class="text-danger fw-semibold mt-3">Thao tác này sẽ xóa hoàn toàn khỏi hệ thống.</p>
    </div>

    <div class="card-footer bg-white border-0 px-4 pb-4 pt-2 d-flex justify-content-between">

        <a asp-action="Index" class="btn btn-light border">
            <i class="fas fa-times me-1"></i> Hủy
        </a>

        <form method="post" asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button class="btn btn-danger px-4">
                <i class="fas fa-trash-alt me-1"></i> Xóa lịch hẹn
            </button>
        </form>

    </div>
</div>
