@model HospitalApp.Models.AppointmentSchedule
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}
<h2>Chi tiết lịch hẹn</h2>

<dl class="row">
    <dt class="col-sm-3">Ngày</dt>
    <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-3">Khung giờ</dt>
    <dd class="col-sm-9">@Model.TimeFrame</dd>

    <dt class="col-sm-3">Bệnh nhân</dt>
    <dd class="col-sm-9">@Model.Patient?.FullName (@Model.PatientId)</dd>

    <dt class="col-sm-3">Bác sĩ</dt>
    <dd class="col-sm-9">@Model.Doctor?.FullName (@Model.DoctorId)</dd>

    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
<a class="btn btn-secondary" asp-action="Index">Về danh sách</a>
