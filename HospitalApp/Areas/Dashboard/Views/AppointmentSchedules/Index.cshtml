@model IEnumerable<HospitalApp.Models.AppointmentSchedule>
@using HospitalApp.Models.Enums
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Lịch khám";

    var search = ViewData["Search"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold">
            <i class="fas fa-calendar-alt text-primary me-2"></i>
            @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1">Xem và quản lý lịch khám trong hệ thống</p>
    </div>

    <div class="card-body px-4">
        <!-- Top bar -->
        <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-calendar-plus me-1"></i> Thêm lịch khám
            </a>

            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input name="search" value="@search"
                       class="form-control"
                       placeholder="Ngày (yyyy-MM-dd), bác sĩ, bệnh nhân..." />

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-undo"></i>
                </a>
            </form>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light fw-semibold">
                    <tr>
                        <th>#</th>

                        <th>
                            <a class="text-decoration-none text-dark"
                               asp-action="Index"
                               asp-route-sortOrder="@ViewData["DateSort"]"
                               asp-route-search="@search">
                                Ngày
                                @if (currentSort == "date_desc")
                                {
                                    <i class="fas fa-sort-down ms-1 text-primary"></i>
                                }
                                else if (currentSort == null || currentSort == "")
                                {
                                    <i class="fas fa-sort-up ms-1 text-primary"></i>
                                }
                            </a>
                        </th>

                        <th>
                            <a class="text-decoration-none text-dark"
                               asp-action="Index"
                               asp-route-sortOrder="@ViewData["TimeSort"]"
                               asp-route-search="@search">
                                Khung giờ
                                @if (currentSort == "time_desc")
                                {
                                    <i class="fas fa-sort-down ms-1 text-primary"></i>
                                }
                                else if (currentSort == "time")
                                {
                                    <i class="fas fa-sort-up ms-1 text-primary"></i>
                                }
                            </a>
                        </th>

                        <th>
                            <a class="text-decoration-none text-dark"
                               asp-action="Index"
                               asp-route-sortOrder="@ViewData["PatientSort"]"
                               asp-route-search="@search">
                                Bệnh nhân
                                @if (currentSort == "patient_desc")
                                {
                                    <i class="fas fa-sort-down ms-1 text-primary"></i>
                                }
                                else if (currentSort == "patient")
                                {
                                    <i class="fas fa-sort-up ms-1 text-primary"></i>
                                }
                            </a>
                        </th>

                        <th>
                            <a class="text-decoration-none text-dark"
                               asp-action="Index"
                               asp-route-sortOrder="@ViewData["DoctorSort"]"
                               asp-route-search="@search">
                                Bác sĩ
                                @if (currentSort == "doctor_desc")
                                {
                                    <i class="fas fa-sort-down ms-1 text-primary"></i>
                                }
                                else if (currentSort == "doctor")
                                {
                                    <i class="fas fa-sort-up ms-1 text-primary"></i>
                                }
                            </a>
                        </th>

                        <th>
                            <a class="text-decoration-none text-dark"
                               asp-action="Index"
                               asp-route-sortOrder="@ViewData["StatusSort"]"
                               asp-route-search="@search">
                                Trạng thái
                                @if (currentSort == "status_desc")
                                {
                                    <i class="fas fa-sort-down ms-1 text-primary"></i>
                                }
                                else if (currentSort == "status")
                                {
                                    <i class="fas fa-sort-up ms-1 text-primary"></i>
                                }
                            </a>
                        </th>

                        <th class="text-end" style="width:300px">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var x in Model)
                    {
                        string StatusBadge(AppointmentStatus s) => s switch
                        {
                            AppointmentStatus.Pending => "badge bg-warning text-dark",
                            AppointmentStatus.Confirmed => "badge bg-info text-dark",
                            AppointmentStatus.Completed => "badge bg-success",
                            AppointmentStatus.Cancelled => "badge bg-danger",
                            _ => "badge bg-secondary"
                        };

                        <tr>
                            <td>@x.Id</td>
                            <td>@x.Date.ToString("dd/MM/yyyy")</td>
                            <td>@x.TimeFrame</td>
                            <td>@x.Patient?.FullName (@x.PatientId)</td>
                            <td>@x.Doctor?.FullName (@x.DoctorId)</td>
                            @{
                                string StatusText(AppointmentStatus s) => s switch
                                {
                                    AppointmentStatus.Pending => "Chờ xác nhận",
                                    AppointmentStatus.Confirmed => "Đã xác nhận",
                                    AppointmentStatus.Completed => "Đã khám",
                                    AppointmentStatus.Cancelled => "Đã hủy",
                                    _ => "Không rõ"
                                };
                            }

                            <td>
                                <span class="@StatusBadge(x.Status)">
                                    @StatusText(x.Status)
                                </span>
                            </td>


                            <td class="text-end">

                                <!-- Update Status -->
                                <form asp-action="UpdateStatus" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@x.Id" />
                                    @{
                                        string StatusText(AppointmentStatus st) => st switch
                                        {
                                            AppointmentStatus.Pending => "Chờ xác nhận",
                                            AppointmentStatus.Confirmed => "Đã xác nhận",
                                            AppointmentStatus.Completed => "Đã khám",
                                            AppointmentStatus.Cancelled => "Đã hủy",
                                            _ => "Không rõ"
                                        };
                                    }

                                    <select name="status" class="form-select form-select-sm d-inline w-auto me-1">
                                        @foreach (AppointmentStatus s in Enum.GetValues(typeof(AppointmentStatus)))
                                        {
                                            <option value="@((int)s)" selected="@(x.Status == s ? "selected" : null)">
                                                @StatusText(s)
                                            </option>
                                        }
                                    </select>


                                    <button class="btn btn-sm btn-success me-1">
                                        <i class="fas fa-save"></i>
                                    </button>
                                </form>

                                <a class="btn btn-sm btn-outline-info me-1"
                                   asp-action="Details"
                                   asp-route-id="@x.Id">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a class="btn btn-sm btn-outline-primary me-1"
                                   asp-action="Edit"
                                   asp-route-id="@x.Id">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="Delete"
                                   asp-route-id="@x.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @{
            var page = (int)(ViewData["Page"] ?? 1);
            var totalPages = (int)(ViewData["TotalPages"] ?? 1);
            var searchQ = ViewData["Search"] as string;
            var sortOrder = ViewData["CurrentSort"] as string;
        }

        @if (totalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(page == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-route-page="@(page - 1)"
                           asp-route-search="@searchQ"
                           asp-route-sortOrder="@sortOrder">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>

                    @for (var i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link"
                               asp-route-page="@i"
                               asp-route-search="@searchQ"
                               asp-route-sortOrder="@sortOrder">@i</a>
                        </li>
                    }

                    <li class="page-item @(page == totalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-route-page="@(page + 1)"
                           asp-route-search="@searchQ"
                           asp-route-sortOrder="@sortOrder">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }

    </div>
</div>
