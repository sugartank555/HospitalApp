@model HospitalApp.Models.AppointmentSchedule
@using HospitalApp.Models.Enums

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Sửa lịch khám";
}

@functions {
    // Chuyển enum thành tiếng Việt
    string StatusText(AppointmentStatus s) => s switch
    {
        AppointmentStatus.Pending => "Chờ xác nhận",
        AppointmentStatus.Confirmed => "Đã xác nhận",
        AppointmentStatus.Completed => "Đã khám",
        AppointmentStatus.Cancelled => "Đã hủy",
        _ => "Không rõ"
    };
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 pt-4 px-4">
        <h3 class="fw-bold m-0">
            <i class="fas fa-edit text-primary me-2"></i> @ViewData["Title"]
        </h3>
        <p class="text-muted mt-1">Cập nhật thông tin lịch khám đã chọn</p>
    </div>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body px-4 pb-4">

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <!-- Date -->
            <div class="mb-3">
                <label asp-for="Date" class="form-label fw-semibold">
                    <i class="fas fa-calendar-day me-1 text-secondary"></i> Ngày khám
                </label>
                <input asp-for="Date" class="form-control form-control-lg" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- TimeFrame -->
            <div class="mb-3">
                <label asp-for="TimeFrame" class="form-label fw-semibold">
                    <i class="fas fa-clock me-1 text-secondary"></i> Khung giờ
                </label>
                <input asp-for="TimeFrame" class="form-control form-control-lg" placeholder="VD: 08:00 - 09:00" />
                <span asp-validation-for="TimeFrame" class="text-danger"></span>
            </div>

            <!-- Patient -->
            <div class="mb-3">
                <label asp-for="PatientId" class="form-label fw-semibold">
                    <i class="fas fa-user-injured me-1 text-secondary"></i> Bệnh nhân
                </label>
                <select asp-for="PatientId"
                        class="form-select form-select-lg"
                        asp-items="ViewBag.PatientId"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <!-- Doctor -->
            <div class="mb-3">
                <label asp-for="DoctorId" class="form-label fw-semibold">
                    <i class="fas fa-user-md me-1 text-secondary"></i> Bác sĩ
                </label>
                <select asp-for="DoctorId"
                        class="form-select form-select-lg"
                        asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-semibold">
                    <i class="fas fa-clipboard-check me-1 text-secondary"></i> Trạng thái
                </label>

                <select asp-for="Status" class="form-select form-select-lg">
                    @foreach (AppointmentStatus s in Enum.GetValues(typeof(AppointmentStatus)))
                    {
                        <option value="@((int)s)" selected="@(Model.Status == s ? "selected" : null)">
                            @StatusText(s)
                        </option>
                    }
                </select>

                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

        </div>

        <div class="card-footer bg-white border-0 px-4 pb-4 pt-2 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-light border">
                <i class="fas fa-arrow-left me-1"></i> Hủy
            </a>

            <button class="btn btn-primary px-4">
                <i class="fas fa-save me-1"></i> Lưu thay đổi
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
