@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null; // Nếu muốn dùng chung _Layout, bỏ dòng này
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --brand: #0d6efd;
            --brand-600: #0b5ed7;
        }

        body {
            min-height: 100vh;
            background: radial-gradient(1200px 600px at 10% 10%, #e9f2ff 0%, transparent 60%), radial-gradient(1000px 500px at 90% 90%, #eef7ff 0%, transparent 60%), linear-gradient(135deg, #f8fbff 0%, #f1f5ff 100%);
        }

        .auth-wrap {
            min-height: 100vh;
        }

        .auth-card {
            max-width: 560px;
            width: 100%;
            border: 0;
            border-radius: 1.25rem;
            box-shadow: 0 20px 45px rgba(13,110,253,.12), 0 8px 16px rgba(0,0,0,.06);
            overflow: hidden;
            background: #fff;
        }

        .auth-header {
            background: linear-gradient(135deg, var(--brand) 0%, var(--brand-600) 100%);
            color: #fff;
            padding: 1.75rem 1.5rem;
        }

            .auth-header h1 {
                font-size: 1.4rem;
                margin: 0;
                letter-spacing: .2px;
            }

        .auth-body {
            padding: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #334155;
        }

        .btn-primary {
            --bs-btn-bg: var(--brand);
            --bs-btn-border-color: var(--brand);
            --bs-btn-hover-bg: var(--brand-600);
            --bs-btn-hover-border-color: var(--brand-600);
            --bs-btn-focus-shadow-rgb: 13,110,253;
        }

        .validation-summary-valid {
            display: none;
        }

        .validation-summary-errors {
            border: 1px solid #f8d7da;
            background: #fef2f2;
            color: #842029;
            border-radius: .75rem;
            padding: .75rem 1rem;
        }

        .links a {
            text-decoration: none;
        }

            .links a:hover {
                text-decoration: underline;
            }

        .pwd-hint {
            font-size: .9rem;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <div class="container auth-wrap d-flex align-items-center justify-content-center py-4">
        <div class="card auth-card">
            <div class="auth-header">
                <h1>@ViewData["Title"]</h1>
                <p class="mb-0">Tạo tài khoản để bắt đầu ✨</p>
            </div>

            <div class="auth-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All" class="validation-summary-errors mb-3"></div>

                    <!-- Tên đăng nhập (hoặc SĐT) - BẮT BUỘC -->
                    <div class="mb-3">
                        <label asp-for="Input.UserName" class="form-label">Tên đăng nhập</label>
                        <input asp-for="Input.UserName" class="form-control form-control-lg"
                               autocomplete="username" aria-required="true" placeholder="VD: phong.nguyen hoặc 0903xxxxxx" />
                        <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                    </div>

                    <!-- Email - KHÔNG BẮT BUỘC -->
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email (không bắt buộc)</label>
                        <input asp-for="Input.Email" class="form-control form-control-lg"
                               autocomplete="email" placeholder="Nhập nếu muốn nhận thông báo qua email" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                        <div class="input-group input-group-lg">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" id="pwd" />
                            <button class="btn btn-outline-secondary" type="button" id="togglePwd" aria-label="Hiển thị/ẩn mật khẩu">
                                <span id="togglePwdText">Hiện</span>
                            </button>
                        </div>
                        <div class="pwd-hint mt-1">Tối thiểu 6 ký tự (hoặc theo cấu hình của bạn).</div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                        <div class="input-group input-group-lg">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" id="pwd2" />
                            <button class="btn btn-outline-secondary" type="button" id="togglePwd2" aria-label="Hiển thị/ẩn mật khẩu">
                                <span id="togglePwdText2">Hiện</span>
                            </button>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Đăng ký</button>

                    <div class="text-center mt-3 links">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đã có tài khoản? <strong>Đăng nhập</strong></a>
                    </div>

                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <hr class="my-4" />
                        <div class="text-center mb-3 text-muted">Hoặc đăng ký/đăng nhập bằng</div>
                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary btn-lg"
                                        name="provider" value="@provider.Name" title="Đăng nhập với @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Hiện/ẩn mật khẩu
        const toggle = (inputId, btnTextId) => {
            const input = document.getElementById(inputId);
            const text = document.getElementById(btnTextId);
            if (!input || !text) return;
            input.type = input.type === "password" ? "text" : "password";
            text.textContent = input.type === "password" ? "Hiện" : "Ẩn";
        };
        document.getElementById('togglePwd')?.addEventListener('click', () => toggle('pwd', 'togglePwdText'));
        document.getElementById('togglePwd2')?.addEventListener('click', () => toggle('pwd2', 'togglePwdText2'));
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
