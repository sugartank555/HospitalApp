@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
    Layout = null; // Dùng trang độc lập. Nếu muốn tái sử dụng layout, thay bằng _AuthLayout.cshtml
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bỏ 2 dòng này nếu đã bundle Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --brand: #0d6efd;
            --brand-600: #0b5ed7;
        }

        body {
            min-height: 100vh;
            background: radial-gradient(1200px 600px at 10% 10%, #e9f2ff 0%, transparent 60%), radial-gradient(1000px 500px at 90% 90%, #eef7ff 0%, transparent 60%), linear-gradient(135deg, #f8fbff 0%, #f1f5ff 100%);
        }

        .auth-wrap {
            min-height: 100vh;
        }

        .auth-card {
            max-width: 520px;
            width: 100%;
            border: 0;
            border-radius: 1.25rem;
            box-shadow: 0 20px 45px rgba(13,110,253,.12), 0 8px 16px rgba(0,0,0,.06);
            background: #fff;
            overflow: hidden;
        }

        .auth-header {
            background: linear-gradient(135deg, var(--brand) 0%, var(--brand-600) 100%);
            color: #fff;
            padding: 1.5rem;
        }

            .auth-header h1 {
                font-size: 1.4rem;
                margin: 0;
                letter-spacing: .2px;
            }

            .auth-header p {
                margin: .25rem 0 0;
                opacity: .9;
            }

        .auth-body {
            padding: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #334155;
        }

        .btn-primary {
            --bs-btn-bg: var(--brand);
            --bs-btn-border-color: var(--brand);
            --bs-btn-hover-bg: var(--brand-600);
            --bs-btn-hover-border-color: var(--brand-600);
            --bs-btn-focus-shadow-rgb: 13,110,253;
        }

        .validation-summary-valid {
            display: none;
        }

        .validation-summary-errors {
            border: 1px solid #f8d7da;
            background: #fef2f2;
            color: #842029;
            border-radius: .75rem;
            padding: .75rem 1rem;
        }

        .links a {
            text-decoration: none;
        }

            .links a:hover {
                text-decoration: underline;
            }

        .hint {
            font-size: .92rem;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <div class="container auth-wrap d-flex align-items-center justify-content-center py-4">
        <div class="card auth-card">
            <!-- Header -->
            <div class="auth-header">
                <h1>@ViewData["Title"]</h1>
                <p>Nhập email để nhận liên kết đặt lại mật khẩu 🔐</p>
            </div>

            <!-- Body -->
            <div class="auth-body">
                <form method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All" class="validation-summary-errors mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                        <div class="hint mt-1">Chúng tôi sẽ gửi đường dẫn đặt lại mật khẩu nếu email tồn tại trong hệ thống.</div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Gửi liên kết</button>

                    <div class="text-center mt-3 links">
                        <a asp-page="./Login">Quay lại <strong>Đăng nhập</strong></a>
                        <span class="mx-2">·</span>
                        <a asp-page="./Register">Chưa có tài khoản? <strong>Đăng ký</strong></a>
                    </div>

                    <hr class="my-4" />
                    <div class="hint text-center">
                        Không thấy email? Kiểm tra hộp thư rác (Spam/Junk). Liên kết thường hết hạn sau một thời gian ngắn.
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bỏ nếu đã bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
