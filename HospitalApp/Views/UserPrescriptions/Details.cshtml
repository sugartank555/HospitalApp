@model HospitalApp.Models.Prescription

@{
    ViewData["Title"] = "Chi tiết đơn thuốc";
}

<h2>Đơn thuốc #@Model.Id</h2>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>Ngày kê:</strong> @Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Mã hồ sơ khám:</strong> @Model.MedicalRecordId</p>
    </div>
</div>

<h4>Thuốc trong đơn</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên thuốc</th>
            <th>Đơn vị</th>
            <th>Hoạt chất</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }

        @foreach (var item in Model.Medicines)
        {
            <tr>
                <td>@i</td>
                <td>@item.Medicine.Name</td>
                <td>@item.Medicine.Unit</td>
                <td>@item.Medicine.ActiveElement</td>
                <td>@item.Quantity</td>
            </tr>
            i++;
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
