@using HospitalApp.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex align-items-center gap-2">
        <span class="me-2">Xin chào, @User.Identity?.Name</span>
        <form method="post" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
              class="m-0">
            <button type="submit" class="btn btn-sm btn-danger">Đăng xuất</button>
        </form>
    </div>
}
else
{
    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-sm btn-outline-primary" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        <a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </div>
}
