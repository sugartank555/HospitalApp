@model HospitalApp.Models.Doctor

@{
    ViewData["Title"] = "Hồ sơ bác sĩ " + Model.FullName;
}

<style>
    .doctor-profile-card {
        background-color: #fff;
        border-radius: 16px;
        border: 1px solid #edf2f9;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
        overflow: hidden;
    }

    .profile-header-bg {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        height: 120px;
        position: relative;
    }

    .avatar-wrapper {
        width: 120px;
        height: 120px;
        background: #fff;
        border-radius: 50%;
        padding: 4px;
        margin-top: -60px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-placeholder {
        width: 100%;
        height: 100%;
        background-color: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #0d6efd;
        font-weight: bold;
    }

    .info-item {
        padding: 1rem;
        border-radius: 12px;
        background-color: #f8f9fa;
        transition: all 0.2s ease;
        height: 100%;
    }

        .info-item:hover {
            background-color: #e7f1ff;
            transform: translateY(-2px);
        }

    .info-label {
        font-size: 0.85rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-weight: 600;
        color: #212529;
        font-size: 1rem;
    }

    .badge-soft {
        background-color: #e7f1ff;
        color: #0d6efd;
        padding: 0.5em 1em;
        border-radius: 50rem;
        font-weight: 500;
        font-size: 0.85rem;
    }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Doctors" asp-action="Index" class="text-decoration-none">Đội ngũ bác sĩ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.FullName</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="doctor-profile-card h-100 text-center pb-4">
                <div class="profile-header-bg"></div>

                <div class="d-flex justify-content-center mb-3">
                    <div class="avatar-wrapper">
                        <div class="avatar-placeholder">
                            @Model.FullName?.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                </div>

                <div class="px-4">
                    <h3 class="fw-bold mb-1">@Model.FullName</h3>
                    <p class="text-primary fw-medium mb-2">@(Model.Position?.Name ?? "Bác sĩ")</p>

                    <div class="mb-4">
                        <span class="badge-soft">
                            <i class="fas fa-stethoscope me-1"></i>
                            @(Model.Expertise?.Name ?? "Đa khoa")
                        </span>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="Appointments"
                           asp-action="Create"
                           asp-route-doctorId="@Model.Id"
                           class="btn btn-primary py-2 rounded-pill fw-bold shadow-sm">
                            <i class="fas fa-calendar-plus me-2"></i>Đặt lịch khám ngay
                        </a>
                        <a asp-controller="Catalog" asp-action="Doctors" class="btn btn-light py-2 rounded-pill text-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="doctor-profile-card p-4 h-100">
                <div class="d-flex align-items-center justify-content-between mb-4 border-bottom pb-3">
                    <h5 class="fw-bold m-0"><i class="fas fa-info-circle text-primary me-2"></i>Thông tin chi tiết</h5>
                    <span class="text-muted small">Mã BS: <span class="font-monospace">#@Model.Id</span></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-heartbeat text-danger me-2 fs-5"></i>
                                <div class="info-label">Chuyên khoa</div>
                            </div>
                            <div class="info-value">@(Model.Expertise?.Name ?? "Chưa cập nhật")</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user-md text-success me-2 fs-5"></i>
                                <div class="info-label">Chức vụ / Học vị</div>
                            </div>
                            <div class="info-value">@(Model.Position?.Name ?? "Chưa cập nhật")</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-phone-alt text-info me-2 fs-5"></i>
                                <div class="info-label">Liên hệ</div>
                            </div>
                            <div class="info-value">
                                @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber" class="text-decoration-none text-dark hover-primary">
                                        @Model.PhoneNumber
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Chưa cập nhật</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="info-item">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-clock text-warning me-2 fs-5"></i>
                                <div class="info-label">Trạng thái</div>
                            </div>
                            <div class="info-value text-success">
                                <i class="fas fa-check-circle me-1"></i> Đang làm việc
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-5">
                    <h6 class="fw-bold mb-3 small text-uppercase text-muted">Dịch vụ liên quan</h6>
                    <div class="bg-light p-3 rounded-3 border d-flex align-items-center justify-content-between flex-wrap gap-3">
                        <div>
                            <span class="fw-medium">Bạn cần xem danh sách dịch vụ y tế?</span>
                            <p class="mb-0 small text-muted">Tra cứu giá và các gói khám sức khỏe.</p>
                        </div>
                        <a asp-controller="Catalog" asp-action="Services" class="btn btn-outline-primary btn-sm rounded-pill px-4">
                            Xem dịch vụ
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>