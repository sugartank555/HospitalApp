@model IEnumerable<HospitalApp.Models.Doctor>
@{
    ViewData["Title"] = "Bác sĩ";
}

<section class="rounded-4 p-4 mb-4" style="
    background: radial-gradient(1000px 500px at 5% 15%, #e9f2ff 0%, transparent 60%),
                radial-gradient(800px 400px at 95% 85%, #eef7ff 0%, transparent 60%),
                linear-gradient(135deg, #f8fbff 0%, #f1f5ff 100%);
    border: 1px solid #eef2ff;">
    <h2 class="m-0">@ViewData["Title"]</h2>
    <div class="text-secondary">Đội ngũ bác sĩ tại phòng khám</div>
</section>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-light border">Hiện chưa có bác sĩ nào để hiển thị.</div>
}
else
{
    <div class="row g-3">
        @foreach (var d in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start justify-content-between">
                            <h5 class="card-title mb-1">@d.FullName</h5>
                            <span class="badge bg-light text-secondary border">#@d.Id</span>
                        </div>

                        <div class="small text-muted mb-2">
                            @(d.Position != null ? d.Position.Name : "Bác sĩ")
                            @if (d.Expertise != null)
                            {
                                @($" · {d.Expertise.Name}")
                            }
                        </div>

                        @if (!string.IsNullOrWhiteSpace(d.PhoneNumber))
                        {
                            <div class="small text-secondary mb-3">📞 @d.PhoneNumber</div>
                        }

                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-controller="Doctors"
                               asp-action="Details"
                               asp-route-id="@d.Id">
                                Xem chi tiết
                            </a>
                            <a class="btn btn-sm btn-primary"
                               asp-controller="Appointments"
                               asp-action="Create"
                               asp-route-doctorId="@d.Id">
                                Đặt lịch
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
